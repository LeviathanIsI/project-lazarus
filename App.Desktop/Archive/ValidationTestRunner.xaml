<UserControl x:Class="Lazarus.Desktop.Views.ValidationTestRunner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource PrimaryDarkBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryDarkBrush}" 
                CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Progressive Disclosure Validation Suite"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Cognitive Load Analysis &amp; Task Completion Efficiency Testing"
                               FontSize="14" Margin="0,5,0,0"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Run Full Validation" 
                            Command="{Binding RunFullValidationCommand}"
                            IsEnabled="{Binding IsNotRunning}"
                            Background="{DynamicResource AccentRedBrush}"
                            Foreground="White"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="Quick Test"
                            Command="{Binding RunQuickTestCommand}"
                            IsEnabled="{Binding IsNotRunning}"
                            Background="{DynamicResource BorderBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Configuration Panel -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryDarkBrush}"
                CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding ShowConfiguration, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="User Expertise Level" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox SelectedValue="{Binding UserExpertiseLevel}"
                              Background="{DynamicResource TertiaryDarkBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <ComboBoxItem Content="Beginner" Tag="Beginner"/>
                        <ComboBoxItem Content="Intermediate" Tag="Intermediate"/>
                        <ComboBoxItem Content="Advanced" Tag="Advanced"/>
                        <ComboBoxItem Content="Expert" Tag="Expert"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                    <TextBlock Text="Test Scenarios"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedScenariosCount, StringFormat=\{0\} scenarios selected}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,0,5"/>
                    <CheckBox Content="Include Error Recovery Tests"
                              IsChecked="{Binding IncludeErrorTests}"
                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="15,0,0,0">
                    <TextBlock Text="Current ViewMode"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentViewMode}"
                               Foreground="{DynamicResource AccentRedBrush}"
                               FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Validation will test all ViewModes automatically"
                               Foreground="{DynamicResource TextMutedBrush}"
                               FontSize="11" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Results Display -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Test Progress & Results Summary -->
            <Border Grid.Column="0" Background="{DynamicResource SecondaryDarkBrush}"
                    CornerRadius="8" Padding="15" Margin="0,0,10,0">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Progress Indicator -->
                        <TextBlock Text="Test Progress" FontWeight="Bold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <ProgressBar Value="{Binding TestProgress}" Maximum="100" Height="20"
                                     Background="{DynamicResource TertiaryDarkBrush}"
                                     Foreground="{DynamicResource AccentRedBrush}"
                                     Margin="0,0,0,10"
                                     Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <TextBlock Text="{Binding CurrentTestStatus}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" Margin="0,0,0,15"
                                   Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <!-- Results Summary -->
                        <TextBlock Text="Results Summary" FontWeight="Bold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"
                                   Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <ItemsControl ItemsSource="{Binding ValidationSummary}"
                                      Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource TertiaryDarkBrush}"
                                            CornerRadius="4" Padding="10" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ViewMode}" FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding Performance}" FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1" Text="{Binding Score, StringFormat=F1}"
                                                       FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"
                                                       Foreground="{DynamicResource AccentRedBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Cognitive Load Analysis -->
                        <TextBlock Text="Cognitive Load Analysis" FontWeight="Bold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,15,0,10"
                                   Visibility="{Binding HasCognitiveData, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <ItemsControl ItemsSource="{Binding CognitiveLoadSummary}"
                                      Visibility="{Binding HasCognitiveData, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,5">
                                        <TextBlock Text="{Binding ViewMode}" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <ProgressBar Value="{Binding CognitiveLoad}" Maximum="10" Height="12"
                                                     Background="{DynamicResource TertiaryDarkBrush}"
                                                     Foreground="{DynamicResource WarningBrush}"/>
                                        <TextBlock Text="{Binding Description}" FontSize="10"
                                                   Foreground="{DynamicResource TextMutedBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Detailed Results View -->
            <Border Grid.Column="1" Background="{DynamicResource SecondaryDarkBrush}"
                    CornerRadius="8" Padding="15">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Detailed Test Results &amp; Analysis"
                                   FontSize="18" FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Export Report" 
                                    Command="{Binding ExportReportCommand}"
                                    IsEnabled="{Binding HasResults}"
                                    Background="{DynamicResource BorderBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Padding="10,5" Margin="0,0,10,0"/>
                            
                            <Button Content="Clear Results"
                                    Command="{Binding ClearResultsCommand}"
                                    IsEnabled="{Binding HasResults}"
                                    Background="{DynamicResource TertiaryDarkBrush}"
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    Padding="10,5"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Results Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Welcome Message -->
                            <Border Background="{DynamicResource TertiaryDarkBrush}"
                                    CornerRadius="6" Padding="20"
                                    Visibility="{Binding ShowWelcomeMessage, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ§ª Progressive Disclosure Validation"
                                               FontSize="20" FontWeight="Bold"
                                               Foreground="{DynamicResource AccentRedBrush}"
                                               HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}">
                                        This validation suite tests the effectiveness of our progressive disclosure architecture by measuring task completion times, error rates, and cognitive load across different ViewModes.
                                    </TextBlock>
                                    
                                    <TextBlock Text="Test Scenarios:" FontWeight="Bold" Margin="0,15,0,5"
                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}">
                                        â€¢ Basic Parameter Adjustment (should favor Novice mode)
                                        â€¢ Advanced Configuration (should favor Developer mode)
                                        â€¢ LoRA Management (workflow complexity test)
                                        â€¢ Image Generation Setup (guided task validation)
                                        â€¢ Multi-Modal Workflow (cross-tab coordination)
                                        â€¢ Error Recovery (mistake handling efficiency)
                                    </TextBlock>
                                    
                                    <TextBlock Text="Click 'Run Full Validation' to begin testing."
                                               FontStyle="Italic" Margin="0,15,0,0"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource TextMutedBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Test Results -->
                            <ItemsControl ItemsSource="{Binding DetailedResults}"
                                          Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource TertiaryDarkBrush}"
                                                CornerRadius="6" Padding="15" Margin="0,0,0,15">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding ScenarioName}"
                                                               FontSize="16" FontWeight="Bold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    
                                                    <TextBlock Grid.Column="1" Text="{Binding OptimalViewMode}"
                                                               HorizontalAlignment="Right" FontWeight="Bold"
                                                               Foreground="{DynamicResource AccentRedBrush}"/>
                                                </Grid>
                                                
                                                <TextBlock Text="{Binding Description}" Margin="0,5,0,15"
                                                           TextWrapping="Wrap"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                
                                                <!-- ViewMode Performance Comparison -->
                                                <ItemsControl ItemsSource="{Binding ViewModeResults}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="{DynamicResource SecondaryDarkBrush}"
                                                                    CornerRadius="4" Padding="10" Margin="0,2">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="80"/>
                                                                        <ColumnDefinition Width="80"/>
                                                                        <ColumnDefinition Width="60"/>
                                                                        <ColumnDefinition Width="60"/>
                                                                        <ColumnDefinition Width="80"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <TextBlock Grid.Column="0" Text="{Binding ViewMode}"
                                                                               FontWeight="SemiBold"
                                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                                    
                                                                    <TextBlock Grid.Column="1" Text="{Binding CompletionTime, StringFormat=\{0:F0\}ms}"
                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                    
                                                                    <TextBlock Grid.Column="2" Text="{Binding InteractionCount, StringFormat=\{0\} clicks}"
                                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                    
                                                                    <TextBlock Grid.Column="3" Text="{Binding ErrorCount, StringFormat=\{0\} errors}"
                                                                               Foreground="{DynamicResource WarningBrush}"/>
                                                                    
                                                                    <TextBlock Grid.Column="4" Text="{Binding SatisfactionScore, StringFormat=\{0\}/10}"
                                                                               Foreground="{DynamicResource SuccessBrush}"/>
                                                                    
                                                                    <TextBlock Grid.Column="5" Text="{Binding Status}"
                                                                               HorizontalAlignment="Right"
                                                                               Foreground="{Binding StatusColor}"/>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Analysis Insights -->
                            <Border Background="{DynamicResource TertiaryDarkBrush}"
                                    CornerRadius="6" Padding="15"
                                    Visibility="{Binding HasInsights, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel>
                                    <TextBlock Text="ðŸ§  Analysis Insights" FontSize="16" FontWeight="Bold"
                                               Foreground="{DynamicResource AccentRedBrush}" Margin="0,0,0,10"/>
                                    
                                    <ItemsControl ItemsSource="{Binding AnalysisInsights}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,5"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource TertiaryDarkBrush}"
                CornerRadius="4" Padding="10" Margin="0,15,0,0"
                Height="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <TextBlock Grid.Column="1" Text="{Binding LastRunTime, StringFormat=Last run: \{0:HH:mm:ss\}}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextMutedBrush}"
                           Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>