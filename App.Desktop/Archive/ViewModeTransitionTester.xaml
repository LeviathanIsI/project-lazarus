<UserControl x:Class="Lazarus.Desktop.Views.ViewModeTransitionTester"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{DynamicResource PrimaryDarkBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryDarkBrush}" 
                CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ViewMode Transition Data Integrity Validator"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Zero Data Loss Validation â€¢ State Preservation Testing â€¢ Work Protection Verification"
                               FontSize="14" Margin="0,5,0,0"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Run Full Test Suite" 
                            Command="{Binding RunFullValidationCommand}"
                            IsEnabled="{Binding IsNotRunning}"
                            Background="{DynamicResource AccentRedBrush}"
                            Foreground="White"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            FontWeight="SemiBold"/>
                    
                    <Button Content="Quick Validation"
                            Command="{Binding RunQuickValidationCommand}"
                            IsEnabled="{Binding IsNotRunning}"
                            Background="{DynamicResource BorderBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Padding="12,8" Margin="0,0,10,0"/>
                    
                    <Button Content="Test Current Transition"
                            Command="{Binding TestCurrentTransitionCommand}"
                            IsEnabled="{Binding IsNotRunning}"
                            Background="{DynamicResource TertiaryDarkBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Test Configuration & Status -->
        <Border Grid.Row="1" Background="{DynamicResource SecondaryDarkBrush}"
                CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                
                <!-- Current ViewMode Status -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current ViewMode" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentViewMode}"
                               Foreground="{DynamicResource AccentRedBrush}"
                               FontSize="18" FontWeight="Bold"/>
                    
                    <TextBlock Text="State Manager Status" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <TextBlock Text="{Binding StateManagerStatus}"
                               Foreground="{DynamicResource SuccessBrush}"
                               FontSize="12"/>
                </StackPanel>
                
                <!-- Test Progress -->
                <StackPanel Grid.Column="1" Margin="15,0">
                    <TextBlock Text="Test Progress" 
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    
                    <ProgressBar Value="{Binding TestProgress}" Maximum="100" Height="20"
                                 Background="{DynamicResource TertiaryDarkBrush}"
                                 Foreground="{DynamicResource AccentRedBrush}"
                                 Margin="0,0,0,10"
                                 Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <TextBlock Text="{Binding CurrentTestStatus}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap" FontSize="12"
                               Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <!-- Last Test Results Summary -->
                    <StackPanel Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="{Binding LastTestSummary}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Test Statistics -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Test Statistics"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               FontWeight="SemiBold" Margin="0,0,0,5"/>
                    
                    <Border Background="{DynamicResource TertiaryDarkBrush}"
                            CornerRadius="4" Padding="8"
                            Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="{Binding SuccessRate, StringFormat=Success: \\{0:P1\\}}"
                                       Foreground="{DynamicResource SuccessBrush}"
                                       FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding TestCount, StringFormat=\\{0\\} tests run}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11"/>
                            <TextBlock Text="{Binding AverageTime, StringFormat=Avg: \\{0:F0\\}ms}"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Results Display -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Test Results Summary -->
            <Border Grid.Column="0" Background="{DynamicResource SecondaryDarkBrush}"
                    CornerRadius="8" Padding="15" Margin="0,0,10,0">
                
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Test Results Summary" FontWeight="Bold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Welcome Message -->
                        <Border Background="{DynamicResource TertiaryDarkBrush}"
                                CornerRadius="6" Padding="15"
                                Visibility="{Binding ShowWelcomeMessage, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="ðŸ”„ ViewMode Transition Validation"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="{DynamicResource AccentRedBrush}"
                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="12">
                                    This validation system ensures that user data, parameters, UI state, and work-in-progress items are preserved correctly during ViewMode transitions.
                                </TextBlock>
                                
                                <TextBlock Text="Validation Areas:" FontWeight="SemiBold" Margin="0,10,0,5"
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11">
                                    â€¢ Parameter value preservation
                                    â€¢ UI state continuity (scroll, expanded sections)
                                    â€¢ Work-in-progress protection
                                    â€¢ LoRA state synchronization
                                    â€¢ Error recovery handling
                                    â€¢ State restoration validation
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- Test Case Results -->
                        <ItemsControl ItemsSource="{Binding TestCaseResults}"
                                      Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource TertiaryDarkBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding TestCaseName}" 
                                                           FontWeight="SemiBold" FontSize="13"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                
                                                <TextBlock Grid.Column="1" Text="{Binding StatusIcon}"
                                                           FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"
                                                           Foreground="{Binding StatusColor}"/>
                                            </Grid>
                                            
                                            <StackPanel Grid.Row="1" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding TransitionPath}" FontSize="11"
                                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                                <TextBlock Text="{Binding ResultSummary}" FontSize="11"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Analysis Insights -->
                        <TextBlock Text="Analysis Insights" FontWeight="Bold" FontSize="16"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   Margin="0,20,0,10"
                                   Visibility="{Binding HasInsights, Converter={StaticResource BoolToVisibility}}"/>
                        
                        <ItemsControl ItemsSource="{Binding AnalysisInsights}"
                                      Visibility="{Binding HasInsights, Converter={StaticResource BoolToVisibility}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,0,0,5"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="12"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Detailed Results View -->
            <Border Grid.Column="1" Background="{DynamicResource SecondaryDarkBrush}"
                    CornerRadius="8" Padding="15">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Detailed Validation Results"
                                   FontSize="18" FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Export Report" 
                                    Command="{Binding ExportReportCommand}"
                                    IsEnabled="{Binding HasResults}"
                                    Background="{DynamicResource BorderBrush}"
                                    Foreground="{DynamicResource TextPrimaryBrush}"
                                    Padding="10,5" Margin="0,0,10,0"/>
                            
                            <Button Content="Clear Results"
                                    Command="{Binding ClearResultsCommand}"
                                    IsEnabled="{Binding HasResults}"
                                    Background="{DynamicResource TertiaryDarkBrush}"
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    Padding="10,5"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Results Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Detailed Test Results -->
                            <ItemsControl ItemsSource="{Binding DetailedTestResults}"
                                          Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource TertiaryDarkBrush}"
                                                CornerRadius="6" Padding="15" Margin="0,0,0,15">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="80"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding TestName}"
                                                               FontSize="16" FontWeight="Bold"
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    
                                                    <TextBlock Grid.Column="1" Text="{Binding TransitionPath}"
                                                               HorizontalAlignment="Right"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    
                                                    <TextBlock Grid.Column="2" Text="{Binding Duration}"
                                                               HorizontalAlignment="Right"
                                                               Foreground="{DynamicResource TextMutedBrush}"/>
                                                </Grid>
                                                
                                                <!-- Validation Results Breakdown -->
                                                <TextBlock Text="Validation Results:" FontWeight="SemiBold" FontSize="13"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,5"/>
                                                
                                                <ItemsControl ItemsSource="{Binding ValidationDetails}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="30"/>
                                                                    <ColumnDefinition Width="150"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                                                           Foreground="{Binding StatusColor}"
                                                                           FontWeight="Bold"/>
                                                                
                                                                <TextBlock Grid.Column="1" Text="{Binding Category}"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           FontSize="11"/>
                                                                
                                                                <TextBlock Grid.Column="2" Text="{Binding Details}"
                                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                                           FontSize="11" TextWrapping="Wrap"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                
                                                <!-- Failure Details -->
                                                <Border Background="{DynamicResource ErrorBrush}"
                                                        CornerRadius="4" Padding="8" Margin="0,10,0,0"
                                                        Opacity="0.1"
                                                        Visibility="{Binding HasFailures, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="{Binding FailureDetails}" 
                                                               Foreground="{DynamicResource ErrorBrush}"
                                                               FontSize="11" TextWrapping="Wrap"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{DynamicResource TertiaryDarkBrush}"
                CornerRadius="4" Padding="12" Margin="0,15,0,0"
                Height="45">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LastRunTime, StringFormat=Last run: \\{0:HH:mm:ss\\}}"
                               Foreground="{DynamicResource TextMutedBrush}"
                               Margin="0,0,15,0"
                               Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibility}}"/>
                    
                    <Border Background="{DynamicResource SuccessBrush}" CornerRadius="10" 
                            Width="12" Height="12"
                            Visibility="{Binding IsHealthy, Converter={StaticResource BoolToVisibility}}"
                            ToolTip="State Manager Healthy"/>
                    
                    <Border Background="{DynamicResource ErrorBrush}" CornerRadius="10" 
                            Width="12" Height="12"
                            Visibility="{Binding IsUnhealthy, Converter={StaticResource BoolToVisibility}}"
                            ToolTip="State Manager Issues Detected"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>