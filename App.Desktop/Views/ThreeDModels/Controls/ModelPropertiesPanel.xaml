<UserControl x:Class="Lazarus.Desktop.Views.ThreeDModels.Controls.ModelPropertiesPanel"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 Background="{DynamicResource TertiaryDarkBrush}">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<TextBlock Grid.Row="0"
				   Text="Properties"
				   Style="{StaticResource HeadingSmallStyle}"
				   FontSize="14"
				   Margin="12,12,12,8"/>

		<!-- Model Information -->
		<Grid Grid.Row="1"
			  Margin="12,0,12,8"
			  Visibility="{Binding HasModel, Converter={StaticResource BooleanToVisibilityConverter}}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<TextBlock Grid.Row="0"
					   Grid.Column="0"
					   Text="Vertices:"
					   Style="{StaticResource CaptionTextStyle}"
					   Margin="0,2"/>
			<TextBlock Grid.Row="0"
					   Grid.Column="1"
					   Text="8"
					   Style="{StaticResource BodyTextStyle}"
					   Margin="8,2,0,2"/>

			<TextBlock Grid.Row="1"
					   Grid.Column="0"
					   Text="Materials:"
					   Style="{StaticResource CaptionTextStyle}"
					   Margin="0,2"/>
			<TextBlock Grid.Row="1"
					   Grid.Column="1"
					   Text="1"
					   Style="{StaticResource BodyTextStyle}"
					   Margin="8,2,0,2"/>

			<TextBlock Grid.Row="2"
					   Grid.Column="0"
					   Text="File Size:"
					   Style="{StaticResource CaptionTextStyle}"
					   Margin="0,2"/>
			<TextBlock Grid.Row="2"
					   Grid.Column="1"
					   Text="2.3 KB"
					   Style="{StaticResource BodyTextStyle}"
					   Margin="8,2,0,2"/>
		</Grid>

		<!-- Transform Controls -->
		<ScrollViewer Grid.Row="2"
					  VerticalScrollBarVisibility="Auto">
			<StackPanel Margin="12">
				<TextBlock Text="Transform"
						   Style="{StaticResource HeadingSmallStyle}"
						   FontSize="12"
						   Margin="0,0,0,8"/>

				<!-- Position -->
				<TextBlock Text="Position"
						   Style="{StaticResource CaptionTextStyle}"
						   Margin="0,4,0,4"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<TextBox Grid.Column="0"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="0,0,2,0"/>
					<TextBox Grid.Column="1"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,2,0"/>
					<TextBox Grid.Column="2"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,0,0"/>
				</Grid>

				<!-- Rotation -->
				<TextBlock Text="Rotation"
						   Style="{StaticResource CaptionTextStyle}"
						   Margin="0,8,0,4"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<TextBox Grid.Column="0"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="0,0,2,0"/>
					<TextBox Grid.Column="1"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,2,0"/>
					<TextBox Grid.Column="2"
							 Text="0.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,0,0"/>
				</Grid>

				<!-- Scale -->
				<TextBlock Text="Scale"
						   Style="{StaticResource CaptionTextStyle}"
						   Margin="0,8,0,4"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<TextBox Grid.Column="0"
							 Text="1.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="0,0,2,0"/>
					<TextBox Grid.Column="1"
							 Text="1.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,2,0"/>
					<TextBox Grid.Column="2"
							 Text="1.0"
							 Style="{StaticResource DarkTextBoxStyle}"
							 Margin="2,0,0,0"/>
				</Grid>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</UserControl>