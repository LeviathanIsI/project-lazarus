<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.EnthusiastDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enthusiast="clr-namespace:Lazarus.Desktop.Views.Dashboard.Widgets.Enthusiast"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400">

    <!-- Enthusiast Dashboard - Customizable 4x3 grid with performance focus -->
    <Grid Background="{DynamicResource PrimaryDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryDarkBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Dashboard Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Performance Dashboard" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding LastRefreshDisplay}" 
                               FontSize="11" 
                               Foreground="{DynamicResource TextMutedBrush}" 
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Dashboard Grid -->
        <Grid Grid.Row="1" Margin="20">
            <!-- Customizable 4x3 Grid -->
            <Grid Name="DashboardGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Default Layout - will be replaced by dynamic widget placement -->
                
                <!-- Row 0 -->
                <enthusiast:SystemStatusWidget Grid.Row="0" Grid.Column="0" Margin="0,0,10,10"/>
                <enthusiast:ActiveModelWidget Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,0,10,10"/>
                <enthusiast:RecentActivityWidget Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Margin="10,0,0,10"/>
                
                <!-- Row 1 -->
                <enthusiast:PerformanceMetricsWidget Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,10,10,0"/>
                <enthusiast:TrainingQueueWidget Grid.Row="1" Grid.Column="2" Margin="10,10,10,10"/>
                
                <!-- Row 2 -->
                <enthusiast:ModelLibraryWidget Grid.Row="2" Grid.Column="2" Margin="10,10,10,0"/>
            </Grid>
        </Grid>

        <!-- Customization Overlay removed for MVP -->

        <!-- Loading Overlay removed per request -->

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SecondaryDarkBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="20,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ¯" FontSize="12" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding Widgets.Count, StringFormat='{}{0} active widgets'}" 
                               FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="0,0,16,0"/>
                    
                    <TextBlock Text="âš¡" FontSize="12" Margin="0,0,4,0"/>
                    <TextBlock Text="2s refresh" 
                               FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="Enthusiast Mode â€¢ Performance Focused"
                           FontSize="11"
                           Foreground="{DynamicResource AccentBrush}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
