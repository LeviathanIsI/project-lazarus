<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.DeveloperDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="1000" d:DesignWidth="1600">

    <!-- Developer Dashboard - Full diagnostic interface with 5x4 customizable grid -->
    <Grid Background="{DynamicResource PrimaryDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Diagnostic Controls -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryDarkBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Dashboard Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🔧" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Developer Dashboard" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>
                    
                    <TextBlock Text="Full Diagnostic Mode" 
                               FontSize="14" 
                               Foreground="{DynamicResource AccentBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Diagnostic Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📊 Export Metrics" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="🔍 Debug Console" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,8,0"/>
                    
                    <Button Content="⚙️ Config Editor" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Diagnostic Grid -->
        <Grid Grid.Row="1" Margin="20">
            <!-- 5x4 Diagnostic Grid -->
            <UniformGrid Rows="4" Columns="5">
                <!-- Row 1: System Overview -->
                <Border Background="{DynamicResource SecondaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="0,0,10,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="🖥️ System" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="CPU: 45%" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="RAM: 8.2/32 GB" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="GPU: 67%" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{DynamicResource SecondaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,0,10,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="🔗 API Status" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Endpoint: :11711" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Response: 45ms" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Uptime: 2h 34m" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{DynamicResource SecondaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,0,10,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="🤖 Model Status" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="No model loaded" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Context: 0" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="T/s: 0.0" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{DynamicResource SecondaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,0,10,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="🎯 Training" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Active: 0" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Queued: 0" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Failed: 0" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                
                <Border Background="{DynamicResource SecondaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,0,0,10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="📊 Performance" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="Avg Response: 125ms" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Success Rate: 98.5%" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="Errors: 2" FontSize="10" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Additional diagnostic widgets would go here -->
                <!-- For now, just placeholder widgets to fill the 5x4 grid -->
                
                <!-- Row 2-4: Placeholder diagnostic widgets -->
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="0,10,10,10" Padding="12">
                    <TextBlock Text="Process Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Error Console" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Config Editor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Database Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,0,10" Padding="12">
                    <TextBlock Text="Memory Profiler" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Continue with more diagnostic widgets... -->
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="0,10,10,10" Padding="12">
                    <TextBlock Text="Network Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Thread Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Cache Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,10" Padding="12">
                    <TextBlock Text="Security Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,0,10" Padding="12">
                    <TextBlock Text="Log Analyzer" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Bottom row -->
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="0,10,10,0" Padding="12">
                    <TextBlock Text="File Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,0" Padding="12">
                    <TextBlock Text="Registry Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,0" Padding="12">
                    <TextBlock Text="Service Monitor" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,10,0" Padding="12">
                    <TextBlock Text="Event Viewer" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Background="{DynamicResource TertiaryDarkBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" Margin="10,10,0,0" Padding="12">
                    <TextBlock Text="Script Console" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </UniformGrid>
        </Grid>

        <!-- Developer Mode Indicator removed (no banner/overlay) -->
    </Grid>
</UserControl>
