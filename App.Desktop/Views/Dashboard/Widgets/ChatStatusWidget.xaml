<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.Widgets.ChatStatusWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <!-- Chat Status Widget - Novice Mode -->
    <Border Background="{DynamicResource SecondaryDarkBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12" 
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="ðŸ’¬" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Chat Status" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Status Icon -->
                <Ellipse Width="60" Height="60" 
                         Fill="{Binding StatusColor}" 
                         Margin="0,0,0,12">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="{Binding StatusGlowColor}" BlurRadius="16" ShadowDepth="0" Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>

                <!-- Status Text -->
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Subtitle -->
                <TextBlock Text="{Binding SubtitleText}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <!-- Loading Spinner (visible when connecting) -->
                <Grid Width="24" Height="24" Margin="0,12,0,0" 
                      Visibility="{Binding IsConnecting, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Ellipse Width="24" Height="24" 
                             Stroke="{DynamicResource AccentBrush}" 
                             StrokeThickness="3" 
                             Opacity="0.3"/>
                    <Ellipse Width="24" Height="24" 
                             Stroke="{DynamicResource AccentBrush}" 
                             StrokeThickness="3" 
                             StrokeDashArray="15,85" 
                             StrokeDashCap="Round">
                        <Ellipse.RenderTransform>
                            <RotateTransform CenterX="12" CenterY="12"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle" 
                                                         From="0" To="360" Duration="0:0:1.5"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>
            </StackPanel>

            <!-- Action Button -->
            <Button Grid.Row="2" 
                    Content="{Binding ActionButtonText}"
                    Command="{Binding ActionCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Padding="16,8"
                    FontSize="14"
                    FontWeight="Medium"
                    IsEnabled="{Binding IsActionEnabled}"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Border>
</UserControl>
