<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.Widgets.Enthusiast.PerformanceMetricsWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">

    <!-- Performance Metrics Widget - Enthusiast Mode -->
    <Border Background="{DynamicResource SecondaryDarkBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="16">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="ðŸ“Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Text="Performance Metrics" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           VerticalAlignment="Center"/>
                
                <!-- Time Range Selector -->
                <ComboBox SelectedIndex="{Binding SelectedTimeRangeIndex}"
                          Margin="16,0,0,0"
                          MinWidth="80"
                          Background="{DynamicResource TertiaryDarkBrush}"
                          BorderBrush="{DynamicResource BorderBrush}">
                    <ComboBoxItem Content="1m"/>
                    <ComboBoxItem Content="5m"/>
                    <ComboBoxItem Content="15m"/>
                    <ComboBoxItem Content="1h"/>
                </ComboBox>
                
                <!-- Tokens per Second Display -->
                <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="T/s:" 
                               FontSize="12" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding TokensPerSecond, StringFormat={}{0:F1}}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Current Values -->
            <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,12">
                <!-- CPU -->
                <StackPanel Margin="0,0,8,0">
                    <TextBlock Text="CPU" 
                               FontSize="11" 
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentCpuUsage, StringFormat={}{0:F0}%}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Memory -->
                <StackPanel Margin="8,0,8,0">
                    <TextBlock Text="Memory" 
                               FontSize="11" 
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentMemoryUsage, StringFormat={}{0:F0}%}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- GPU -->
                <StackPanel Margin="8,0,0,0">
                    <TextBlock Text="GPU" 
                               FontSize="11" 
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentGpuUsage, StringFormat={}{0:F0}%}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </UniformGrid>

            <!-- Charts Area -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- CPU Chart -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource TertiaryDarkBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,0,0,4"
                        Padding="8">
                    <Grid>
                        <TextBlock Text="CPU Usage" 
                                   FontSize="10" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"/>
                        
                        <!-- Simple CPU Chart Placeholder -->
                        <Canvas Name="CpuChart" Background="Transparent">
                            <!-- Chart will be drawn programmatically -->
                        </Canvas>
                        
                        <!-- Y-axis labels -->
                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="2,16,0,8">
                            <TextBlock Text="100%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Top"/>
                            <TextBlock Text="50%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="0%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Memory Chart -->
                <Border Grid.Row="1" 
                        Background="{DynamicResource TertiaryDarkBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Margin="0,4,0,0"
                        Padding="8">
                    <Grid>
                        <TextBlock Text="Memory Usage" 
                                   FontSize="10" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"/>
                        
                        <!-- Simple Memory Chart Placeholder -->
                        <Canvas Name="MemoryChart" Background="Transparent">
                            <!-- Chart will be drawn programmatically -->
                        </Canvas>
                        
                        <!-- Y-axis labels -->
                        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="2,16,0,8">
                            <TextBlock Text="100%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Top"/>
                            <TextBlock Text="50%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="0%" FontSize="8" Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="{Binding LastUpdateText}" 
                           FontSize="9" 
                           Foreground="{DynamicResource TextMutedBrush}"/>
                
                <TextBlock Text=" â€¢ " 
                           FontSize="9" 
                           Foreground="{DynamicResource TextMutedBrush}"
                           Margin="4,0"/>
                
                <TextBlock Text="{Binding DataPointsText}" 
                           FontSize="9" 
                           Foreground="{DynamicResource TextMutedBrush}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
