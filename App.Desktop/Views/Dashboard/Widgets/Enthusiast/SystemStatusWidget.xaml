<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.Widgets.Enthusiast.SystemStatusWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <!-- System Status Widget - Enthusiast Mode -->
    <Border Background="{DynamicResource SecondaryDarkBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="16">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="⚙️" FontSize="16" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBlock Text="System Status" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           VerticalAlignment="Center"/>
                
                <!-- Status Indicator -->
                <Ellipse Width="8" Height="8" 
                         Fill="{Binding StatusColor}" 
                         Margin="8,0,0,0"
                         VerticalAlignment="Center">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="{Binding StatusColor}" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                    </Ellipse.Effect>
                </Ellipse>
            </StackPanel>

            <!-- Content -->
            <StackPanel Grid.Row="1">
                <!-- Runner States -->
                <TextBlock Text="Runners" 
                           FontSize="11" 
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="0,0,0,6"/>
                
                <ItemsControl ItemsSource="{Binding RunnerStates}" Margin="0,0,0,12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                           Text="{Binding RunnerName}" 
                                           FontSize="10" 
                                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Ellipse Width="6" Height="6" 
                                             Fill="{Binding StatusColor}" 
                                             Margin="0,0,4,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusText}" 
                                               FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Memory Usage -->
                <TextBlock Text="Memory" 
                           FontSize="11" 
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="0,0,0,6"/>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ProgressBar Grid.Column="0"
                                 Value="{Binding MemoryPercentage}" 
                                 Maximum="100"
                                 Height="6"
                                 Background="{DynamicResource TertiaryDarkBrush}"
                                 Foreground="{DynamicResource AccentBrush}"
                                 VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding MemoryUsageText}" 
                               FontSize="10" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Margin="8,0,0,0"/>
                </Grid>

                <!-- API Response Time -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="API Response" 
                               FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                    
                    <TextBlock Grid.Column="1"
                               Text="{Binding ApiResponseTimeText}" 
                               FontSize="11" 
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Grid>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Grid.Row="2" 
                       Text="{Binding LastUpdateText}" 
                       FontSize="9" 
                       Foreground="{DynamicResource TextMutedBrush}" 
                       HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>
