<UserControl x:Class="Lazarus.Desktop.Views.Dashboard.Widgets.ModelStatusWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">

    <!-- Model Status Widget - Novice Mode -->
    <Border Background="{DynamicResource SecondaryDarkBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12" 
            Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="ðŸ¤–" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="AI Models" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Status Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Model Count Display -->
                <TextBlock Text="{Binding ModelCountText}" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Foreground="{DynamicResource AccentBrush}" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <!-- Current Model -->
                <TextBlock Text="{Binding CurrentModelText}" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           HorizontalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,8"/>

                <!-- Status -->
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="12" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Action Button -->
            <Button Grid.Row="2" 
                    Content="{Binding ActionButtonText}"
                    Command="{Binding ActionCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Padding="16,8"
                    FontSize="14"
                    FontWeight="Medium"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Border>
</UserControl>
