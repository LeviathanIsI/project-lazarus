<UserControl x:Class="Lazarus.Desktop.Views.EmbeddingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Textual Inversions and Embeddings" FontWeight="Bold" Foreground="White" FontSize="18"/>
                    <TextBlock Text="Custom keywords and concepts for style modification" Foreground="#9ca3af" FontSize="12" Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Train New" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                    <Button Content="Import" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Embeddings List -->
            <Border Grid.Column="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Active Embeddings -->
                        <TextBlock Text="Active Embeddings" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                        
                        <Border Background="#8b5cf6" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="badhandv4" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: badhandv4 • Negative embedding" Foreground="#e0e7ff" FontSize="11"/>
                                    <TextBlock Text="Improves hand anatomy • 67 KB" Foreground="#e0e7ff" FontSize="10"/>
                                </StackPanel>
                                <TextBox Grid.Column="1" Text="0.9" Background="#6b46c1" Foreground="White" 
                                         BorderThickness="0" Padding="4,2" Width="40" TextAlignment="Center" Margin="8,0"/>
                                <Button Grid.Column="2" Content="×" Background="Transparent" Foreground="White" 
                                        BorderThickness="0" Width="20" Height="20"/>
                            </Grid>
                        </Border>

                        <Border Background="#10b981" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="cyberpunk-style" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: cyberstyle • Style embedding" Foreground="#dcfce7" FontSize="11"/>
                                    <TextBlock Text="Neon aesthetic enhancement • 45 KB" Foreground="#dcfce7" FontSize="10"/>
                                </StackPanel>
                                <TextBox Grid.Column="1" Text="1.2" Background="#059669" Foreground="White" 
                                         BorderThickness="0" Padding="4,2" Width="40" TextAlignment="Center" Margin="8,0"/>
                                <Button Grid.Column="2" Content="×" Background="Transparent" Foreground="White" 
                                        BorderThickness="0" Width="20" Height="20"/>
                            </Grid>
                        </Border>

                        <!-- Available Embeddings by Category -->
                        <TextBlock Text="Style Embeddings" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                        
                        <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,6" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="anime-style-xl" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: animexl • Enhanced anime aesthetics" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Size: 78 KB • Vectors: 16" Foreground="#9ca3af" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="+" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Width="24" Height="24"/>
                            </Grid>
                        </Border>

                        <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,6" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="vintage-photo" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: vintagephoto • Film photography style" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Size: 34 KB • Vectors: 8" Foreground="#9ca3af" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="+" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Width="24" Height="24"/>
                            </Grid>
                        </Border>

                        <!-- Negative Embeddings -->
                        <TextBlock Text="Negative Embeddings" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,16,0,12"/>
                        
                        <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,6" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="easynegative" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: easynegative • General quality improvement" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Size: 25 KB • Popular negative prompt" Foreground="#9ca3af" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="+" Background="#dc2626" Foreground="White" 
                                        BorderThickness="0" Width="24" Height="24"/>
                            </Grid>
                        </Border>

                        <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,16" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="bad-artist-anime" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Keyword: bad-artist-anime • Anime quality fix" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Size: 43 KB • Reduces artifacts" Foreground="#9ca3af" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="+" Background="#dc2626" Foreground="White" 
                                        BorderThickness="0" Width="24" Height="24"/>
                            </Grid>
                        </Border>

                        <!-- Training -->
                        <Border Background="#1f2937" CornerRadius="8" Padding="16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="🧠" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Train Custom Embedding" Foreground="#9ca3af" HorizontalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text="Create your own style or concept" Foreground="#6b7280" FontSize="11" HorizontalAlignment="Center"/>
                                <Button Content="Start Training" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Padding="16,8" Margin="0,12,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Configuration Panel -->
            <Border Grid.Column="1" Background="#0f0f0f" CornerRadius="8" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Embedding Details" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,16"/>
                        
                        <!-- Selected Embedding Info -->
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="badhandv4" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                <TextBlock Text="Type: Negative Embedding" Foreground="#9ca3af" FontSize="11" Margin="0,4,0,0"/>
                                <TextBlock Text="Vectors: 16" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                <TextBlock Text="Keywords: badhandv4" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                <TextBlock Text="Trained on: SD 1.5" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                <TextBlock Text="Purpose: Hand anatomy correction" Foreground="#10b981" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Usage -->
                        <TextBlock Text="Usage" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Trigger Keyword" Foreground="#9ca3af" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Text="badhandv4" Background="#374151" Foreground="White" 
                                         BorderThickness="0" Padding="8,4" Margin="0,0,0,8"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Strength" Foreground="#9ca3af" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="0.9" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="4,2" TextAlignment="Center"/>
                                </Grid>
                                <Slider Value="0.9" Minimum="0" Maximum="2" TickFrequency="0.1" Foreground="#8b5cf6"/>
                                
                                <CheckBox Content="Add to negative prompt" Foreground="White" IsChecked="True" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Prompt Helper -->
                        <TextBlock Text="Prompt Integration" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Generated Prompt" Foreground="#9ca3af" FontSize="12" Margin="0,0,0,4"/>
                                <TextBox Text="(badhandv4:0.9)" Background="#374151" Foreground="White" 
                                         BorderThickness="0" Padding="8,4" IsReadOnly="True" Margin="0,0,0,8"/>
                                <Button Content="Copy to Clipboard" Background="#374151" Foreground="White" 
                                        BorderThickness="0" Padding="8,4" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>

                        <!-- Training Info -->
                        <TextBlock Text="Training Information" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Base Model:" Foreground="#9ca3af" Width="80"/>
                                    <TextBlock Grid.Column="1" Text="SD 1.5" Foreground="White" FontSize="11"/>
                                </Grid>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Steps:" Foreground="#9ca3af" Width="80"/>
                                    <TextBlock Grid.Column="1" Text="8000" Foreground="White" FontSize="11"/>
                                </Grid>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Learning Rate:" Foreground="#9ca3af" Width="80"/>
                                    <TextBlock Grid.Column="1" Text="0.005" Foreground="White" FontSize="11"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Dataset:" Foreground="#9ca3af" Width="80"/>
                                    <TextBlock Grid.Column="1" Text="Hand images" Foreground="White" FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <Button Content="Apply to Chat" Background="#8b5cf6" Foreground="White" 
                                BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="View Sample Images" Background="#374151" Foreground="White" 
                                BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="Delete Embedding" Background="#dc2626" Foreground="White" 
                                BorderThickness="0" Padding="12,8" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>