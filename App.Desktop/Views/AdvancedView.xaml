<UserControl x:Class="Lazarus.Desktop.Views.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a" Margin="16">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Memory Management -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Memory Management" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- VRAM Usage -->
                            <Border Grid.Column="0" Background="#1a1a1a" CornerRadius="6" Padding="12" Margin="0,0,4,0">
                                <StackPanel>
                                    <TextBlock Text="VRAM Usage" FontWeight="SemiBold" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="18.2 GB / 32.0 GB" Foreground="#10b981" FontSize="20" FontWeight="Bold" Margin="0,4,0,0"/>
                                    <ProgressBar Value="57" Maximum="100" Height="8" Margin="0,8,0,0" Foreground="#10b981" Background="#374151"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- RAM Usage -->
                            <Border Grid.Column="1" Background="#1a1a1a" CornerRadius="6" Padding="12" Margin="4,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="System RAM" FontWeight="SemiBold" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="24.7 GB / 128.0 GB" Foreground="#8b5cf6" FontSize="20" FontWeight="Bold" Margin="0,4,0,0"/>
                                    <ProgressBar Value="19" Maximum="100" Height="8" Margin="0,8,0,0" Foreground="#8b5cf6" Background="#374151"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <CheckBox Content="Enable memory optimization" Foreground="White" IsChecked="True" Margin="0,8,0,4"/>
                        <CheckBox Content="Offload to CPU when possible" Foreground="White" Margin="0,0,0,4"/>
                        <CheckBox Content="Use gradient checkpointing" Foreground="White" IsChecked="True" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- LyCORIS Networks -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="LyCORIS Networks" FontWeight="Bold" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Import LyCORIS" Background="#8b5cf6" Foreground="White" 
                                    BorderThickness="0" Padding="12,8"/>
                        </Grid>

                        <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="concept-style-lycoris.safetensors" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="LoCon architecture • 89 MB" Foreground="#9ca3af" FontSize="11"/>
                                </StackPanel>
                                <TextBox Grid.Column="1" Text="0.7" Background="#374151" Foreground="White" 
                                         BorderThickness="0" Padding="6,4" Width="50" TextAlignment="Center" Margin="8,0"/>
                                <Button Grid.Column="2" Content="+" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Width="24" Height="24"/>
                            </Grid>
                        </Border>

                        <TextBlock Text="LyCORIS provides enhanced flexibility over standard LoRA with multiple architectures" 
                                   Foreground="#9ca3af" FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Upscalers -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Upscaler Models" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <Border Background="#8b5cf6" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="RealESRGAN x4" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="Active • General purpose" Foreground="#e0e7ff" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="#374151" CornerRadius="6" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="ESRGAN x4 Anime" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="Available • Anime optimized" Foreground="#9ca3af" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <Border Background="#374151" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="LDSR" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="Available • Latent diffusion" Foreground="#9ca3af" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="#374151" CornerRadius="6" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="SwinIR x4" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="Available • Transformer based" Foreground="#9ca3af" FontSize="11"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Upscale Factor" Foreground="#9ca3af" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Background="#374151" Foreground="White" BorderThickness="0" Padding="4,2">
                                <ComboBoxItem Content="2x"/>
                                <ComboBoxItem Content="4x" IsSelected="True"/>
                                <ComboBoxItem Content="8x"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Quantization -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Model Quantization" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Precision" Foreground="#9ca3af" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1" Background="#374151" Foreground="White" BorderThickness="0" Padding="8,4">
                                <ComboBoxItem Content="FP32"/>
                                <ComboBoxItem Content="FP16" IsSelected="True"/>
                                <ComboBoxItem Content="BF16"/>
                                <ComboBoxItem Content="INT8"/>
                                <ComboBoxItem Content="INT4"/>
                            </ComboBox>
                        </Grid>

                        <CheckBox Content="Enable dynamic quantization" Foreground="White" Margin="0,0,0,4"/>
                        <CheckBox Content="Use attention optimization" Foreground="White" IsChecked="True" Margin="0,0,0,4"/>
                        <CheckBox Content="Flash Attention 2 (if available)" Foreground="White" IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- Experimental Features -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Experimental Features" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <CheckBox Content="Enable xFormers attention" Foreground="White" IsChecked="True" Margin="0,0,0,4"/>
                        <CheckBox Content="Use DoRA (Weight-Decomposed LoRA)" Foreground="White" Margin="0,0,0,4"/>
                        <CheckBox Content="Enable LoRA++" Foreground="White" Margin="0,0,0,4"/>
                        <CheckBox Content="Model parallelism (multi-GPU)" Foreground="White" Margin="0,0,0,4"/>
                        <CheckBox Content="Pipeline parallelism" Foreground="White" Margin="0,0,0,12"/>
                        
                        <TextBlock Text="⚠️ These features may be unstable or require specific hardware" 
                                   Foreground="#f59e0b" FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Performance Monitoring -->
                <Border Background="#0f0f0f" CornerRadius="8" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Performance Monitoring" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,12"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="#1a1a1a" CornerRadius="6" Padding="12" Margin="0,0,4,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Inference Speed" Foreground="#9ca3af" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Text="2.4 tok/s" Foreground="#10b981" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="#1a1a1a" CornerRadius="6" Padding="12" Margin="2,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="GPU Temperature" Foreground="#9ca3af" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Text="68°C" Foreground="#f59e0b" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="#1a1a1a" CornerRadius="6" Padding="12" Margin="4,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Power Draw" Foreground="#9ca3af" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Text="387W" Foreground="#8b5cf6" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <CheckBox Content="Enable performance logging" Foreground="White" IsChecked="True" Margin="0,12,0,4"/>
                        <CheckBox Content="Show detailed metrics" Foreground="White" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>