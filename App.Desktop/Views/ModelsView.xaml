<UserControl x:Class="Lazarus.Desktop.Views.ModelsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- Dark ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="#374151" BorderThickness="0" CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Content="{TemplateBinding SelectionBoxItem}" 
                                                      Margin="12,8" VerticalAlignment="Center" 
                                                      TextBlock.Foreground="White"/>
                                    <ToggleButton Grid.Column="1" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent" BorderThickness="0" Width="30">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="White" HorizontalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" StaysOpen="False">
                                <Border Background="#374151" BorderThickness="1" BorderBrush="#6b7280" CornerRadius="4">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Dark ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#374151"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#8b5cf6"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#8b5cf6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#1a1a1a" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sub-Tab Navigation -->
        <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8,8,0,0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="12,8">
                <Button x:Name="BaseModelTab" Content="Base Model" Tag="BaseModel" Click="SubTabButton_Click"
                        Background="#8b5cf6" Foreground="White" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="LoRAsTab" Content="LoRAs" Tag="LoRAs" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="ControlNetsTab" Content="ControlNets" Tag="ControlNets" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="VAEsTab" Content="VAEs" Tag="VAEs" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="EmbeddingsTab" Content="Embeddings" Tag="Embeddings" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="HypernetworksTab" Content="Hypernetworks" Tag="Hypernetworks" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold"/>
                <Button x:Name="AdvancedTab" Content="Advanced" Tag="Advanced" Click="SubTabButton_Click"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        Padding="16,8" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Tab Content -->
        <Border Grid.Row="1" Background="#0f0f0f" CornerRadius="0,0,8,8" Padding="16">
            <Grid>
                <!-- Base Model Content -->
                <ScrollViewer x:Name="BaseModelContent" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column: Model Selection & Sampling -->
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <!-- Model Selection -->
                            <Border Background="#1a1a1a" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Model Selection" FontWeight="Bold" Foreground="White" 
                                               FontSize="16" Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ComboBox Style="{StaticResource DarkComboBox}">
                                            <ComboBoxItem Content="Qwen2.5-32B-Instruct (GGUF Q5_K_M)" IsSelected="True"/>
                                            <ComboBoxItem Content="Mistral-7B-Instruct-v0.3 (SafeTensors FP16)"/>
                                            <ComboBoxItem Content="Llama-3.1-8B-Instruct (GGUF Q4_K_M)"/>
                                        </ComboBox>

                                        <Button Grid.Column="1" Content="Load" Background="#8b5cf6" Foreground="White" 
                                                BorderThickness="0" Padding="12,8" Margin="8,0,0,0"/>
                                    </Grid>

                                    <TextBlock Text="Status: Loaded • VRAM: 18.2 GB" Foreground="#10b981" 
                                               FontSize="12" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Sampling Parameters -->
                            <Border Background="#1a1a1a" CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Sampling Parameters" FontWeight="Bold" Foreground="White" 
                                               FontSize="16" Margin="0,0,0,16"/>

                                    <!-- Temperature -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Temperature" Foreground="#d1d5db" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="0.7" Background="#374151" Foreground="White" 
                                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                    <Slider Value="0.7" Minimum="0" Maximum="2" TickFrequency="0.1" 
                                            Margin="0,0,0,16" Foreground="#8b5cf6"/>

                                    <!-- Top P -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Top P" Foreground="#d1d5db" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="0.9" Background="#374151" Foreground="White" 
                                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                    <Slider Value="0.9" Minimum="0" Maximum="1" TickFrequency="0.05" 
                                            Margin="0,0,0,16" Foreground="#8b5cf6"/>

                                    <!-- Max Tokens -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Max Tokens" Foreground="#d1d5db" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="512" Background="#374151" Foreground="White" 
                                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                    <Slider Value="512" Minimum="1" Maximum="4096" TickFrequency="64" 
                                            Margin="0,0,0,16" Foreground="#8b5cf6"/>

                                    <!-- Repeat Penalty -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Repeat Penalty" Foreground="#d1d5db" VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Text="1.1" Background="#374151" Foreground="White" 
                                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                    <Slider Value="1.1" Minimum="0.5" Maximum="2" TickFrequency="0.1" 
                                            Foreground="#8b5cf6"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right Column: System Prompt & Testing -->
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <!-- System Prompt -->
                            <Border Background="#1a1a1a" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="System Prompt" FontWeight="Bold" Foreground="White" 
                                                   FontSize="16" VerticalAlignment="Center"/>
                                        <ComboBox Grid.Column="1" Style="{StaticResource DarkComboBox}" MinWidth="120">
                                            <ComboBoxItem Content="Custom" IsSelected="True"/>
                                            <ComboBoxItem Content="Assistant"/>
                                            <ComboBoxItem Content="Creative"/>
                                            <ComboBoxItem Content="Code Helper"/>
                                        </ComboBox>
                                    </Grid>
                                    <TextBox Background="#374151" Foreground="White" BorderThickness="0" 
                                             Padding="12" MinHeight="150" TextWrapping="Wrap" 
                                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                             Text="You are a helpful, harmless, and honest AI assistant."/>
                                </StackPanel>
                            </Border>

                            <!-- Model Information -->
                            <Border Background="#1a1a1a" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Model Information" FontWeight="Bold" Foreground="White" 
                                               FontSize="16" Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Size:" Foreground="#9ca3af" Width="80"/>
                                        <TextBlock Grid.Column="1" Text="22.7 GB" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Context:" Foreground="#9ca3af" Width="80"/>
                                        <TextBlock Grid.Column="1" Text="32,768 tokens" Foreground="White"/>
                                    </Grid>

                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Runner:" Foreground="#9ca3af" Width="80"/>
                                        <TextBlock Grid.Column="1" Text="llama.cpp" Foreground="#10b981"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Test Prompt -->
                            <Border Background="#1a1a1a" CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="Quick Test" FontWeight="Bold" Foreground="White" 
                                               FontSize="16" Margin="0,0,0,12"/>
                                    <TextBox Background="#374151" Foreground="White" BorderThickness="0" 
                                             Padding="12,8" Text="Write a short poem about AI"
                                             Margin="0,0,0,12"/>
                                    <Button Content="Test Prompt" Background="#8b5cf6" Foreground="White" 
                                            BorderThickness="0" Padding="16,8" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <!-- LoRAs Content -->
                <Grid x:Name="LoRAsContent" Background="#1a1a1a" Margin="16" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="LoRA Networks" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="Low-Rank Adaptation models for fine-tuning" Foreground="#9ca3af" FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Train New" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                                <Button Content="Import" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="320"/>
                        </Grid.ColumnDefinitions>

                        <!-- LoRA List -->
                        <Border Grid.Column="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- Active LoRAs -->
                                    <TextBlock Text="Active LoRAs" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                                    
                                    <Border Background="#8b5cf6" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="concept-art-style.safetensors" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text="Style: Digital concept art • 144 MB" Foreground="#e0e7ff" FontSize="11"/>
                                            </StackPanel>
                                            <TextBox Grid.Column="1" Text="0.8" Background="#6b46c1" Foreground="White" 
                                                     BorderThickness="0" Padding="6,4" Width="50" TextAlignment="Center" Margin="8,0"/>
                                            <Button Grid.Column="2" Content="×" Background="Transparent" Foreground="White" 
                                                    BorderThickness="0" Width="20" Height="20"/>
                                        </Grid>
                                    </Border>

                                    <!-- Available LoRAs -->
                                    <TextBlock Text="Available LoRAs" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,16,0,12"/>
                                    
                                    <Border Background="#374151" CornerRadius="8" Padding="12" Margin="0,0,0,6" Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="portrait-lighting.safetensors" Foreground="White" FontWeight="Bold"/>
                                                <TextBlock Text="Style: Professional portraits • 89 MB" Foreground="#9ca3af" FontSize="11"/>
                                            </StackPanel>
                                            <Button Grid.Column="1" Content="+" Background="#8b5cf6" Foreground="White" 
                                                    BorderThickness="0" Width="24" Height="24"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!-- Configuration Panel -->
                        <Border Grid.Column="1" Background="#0f0f0f" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="LoRA Configuration" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,16"/>
                                
                                <!-- Selected LoRA Info -->
                                <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="concept-art-style" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                        <TextBlock Text="Type: Style Enhancement" Foreground="#9ca3af" FontSize="11" Margin="0,4,0,0"/>
                                        <TextBlock Text="Rank: 32" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                        <TextBlock Text="Alpha: 32" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Weight Control -->
                                <TextBlock Text="LoRA Weight" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Value="0.8" Minimum="0" Maximum="2" TickFrequency="0.1" Foreground="#8b5cf6"/>
                                    <TextBox Grid.Column="1" Text="0.8" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- ControlNets Content -->
                <Grid x:Name="ControlNetsContent" Background="#1a1a1a" Margin="16" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ControlNet Models" FontWeight="Bold" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Install from Hub" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                                <Button Content="Browse Local" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="320"/>
                        </Grid.ColumnDefinitions>

                        <!-- ControlNet Grid -->
                        <Border Grid.Column="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <UniformGrid Columns="2">
                                    <!-- Canny Edge Detection -->
                                    <Border Background="#374151" CornerRadius="8" Margin="4" Padding="16">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Canny Edge" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                                <Border Grid.Column="1" Background="#10b981" CornerRadius="12" Padding="8,2">
                                                    <TextBlock Text="Loaded" Foreground="White" FontSize="10"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Text="Edge detection and line art control" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                            <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Button Content="Configure" Background="#8b5cf6" Foreground="White" 
                                                        BorderThickness="0" Padding="8,4" FontSize="11"/>
                                                <Button Grid.Column="1" Content="⚙️" Background="#1f2937" Foreground="White" 
                                                        BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Depth Estimation -->
                                    <Border Background="#1f2937" CornerRadius="8" Margin="4" Padding="16">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Depth" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                                <Border Grid.Column="1" Background="#6b7280" CornerRadius="12" Padding="8,2">
                                                    <TextBlock Text="Available" Foreground="White" FontSize="10"/>
                                                </Border>
                                            </Grid>
                                            <TextBlock Text="3D depth and perspective control" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                            <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Button Content="Download" Background="#374151" Foreground="#9ca3af" 
                                                        BorderThickness="0" Padding="8,4" FontSize="11"/>
                                                <Button Grid.Column="1" Content="⚙️" Background="#1f2937" Foreground="White" 
                                                        BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </UniformGrid>
                            </ScrollViewer>
                        </Border>

                        <!-- Configuration Panel -->
                        <Border Grid.Column="1" Background="#0f0f0f" CornerRadius="8" Padding="16">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="ControlNet Configuration" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,16"/>
                                    
                                    <!-- Selected Model -->
                                    <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                                        <StackPanel>
                                            <TextBlock Text="Canny Edge Detection" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                            <TextBlock Text="Version: 1.1" Foreground="#9ca3af" FontSize="11" Margin="0,4,0,0"/>
                                            <TextBlock Text="Resolution: 512x512" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                            <TextBlock Text="Status: Active" Foreground="#10b981" FontSize="11" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Control Weight -->
                                    <TextBlock Text="Control Weight" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                    <Grid Margin="0,0,0,16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Value="1.0" Minimum="0" Maximum="2" TickFrequency="0.1" Foreground="#8b5cf6"/>
                                        <TextBox Grid.Column="1" Text="1.0" Background="#374151" Foreground="White" 
                                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>

                <!-- VAEs Content -->
                <Grid x:Name="VAEsContent" Background="#1a1a1a" Margin="16" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="Variational Auto-Encoders" FontWeight="Bold" Foreground="White" FontSize="18"/>
                                <TextBlock Text="Encode/decode models for latent space translation" Foreground="#9ca3af" FontSize="12" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Auto-Detect" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                                <Button Content="Import VAE" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
