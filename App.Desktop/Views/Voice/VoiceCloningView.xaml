<UserControl x:Class="Lazarus.Desktop.Views.Voice.VoiceCloningView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 Background="{DynamicResource PrimaryDarkBrush}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300" MinWidth="200"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="300" MinWidth="200"/>
		</Grid.ColumnDefinitions>

		<!-- Left Panel: Voice Cloning Controls -->
		<Border Grid.Column="0"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="8,0,0,8"
				Margin="8,8,4,8">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel Margin="12">
					<TextBlock Text="Voice Cloning"
							   Foreground="{DynamicResource TextPrimaryBrush}"
							   FontSize="18"
							   FontWeight="Bold"
							   Margin="0,0,0,16"/>

					<!-- Audio Upload -->
					<TextBlock Text="Training Audio:"
							   Foreground="{DynamicResource TextPrimaryBrush}"
							   Margin="0,0,0,4"/>
					<Border Background="{DynamicResource TertiaryDarkBrush}"
							Height="100"
							CornerRadius="4"
							Margin="0,0,0,8">
						<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
							<TextBlock Text="ðŸŽ¤ Drop audio files here"
									   Foreground="{DynamicResource TextSecondaryBrush}"
									   HorizontalAlignment="Center"/>
							<Button Content="Browse Audio..."
									Command="{Binding BrowseAudioCommand}"
									Style="{StaticResource SecondaryButtonStyle}"
									Margin="0,8,0,0"
									Height="36"
									MinWidth="120"
									Padding="12,4"/>
						</StackPanel>
					</Border>

					<!-- Voice Name -->
					<TextBlock Text="Voice Name:"
							   Foreground="{DynamicResource TextPrimaryBrush}"
							   Margin="0,0,0,4"/>
					<TextBox Text="{Binding VoiceName}"
							 Background="{DynamicResource TertiaryDarkBrush}"
							 Foreground="{DynamicResource TextPrimaryBrush}"
							 BorderBrush="{DynamicResource BorderBrush}"
							 Margin="0,0,0,12"/>

					<!-- Training Settings -->
					<TextBlock Text="Training Settings"
							   Foreground="{DynamicResource TextPrimaryBrush}"
							   FontSize="14"
							   FontWeight="Bold"
							   Margin="0,0,0,8"/>

					<!-- Quality Level -->
					<StackPanel Margin="0,0,0,8">
						<TextBlock Text="Quality Level:"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   Margin="0,0,0,4"/>
						<ComboBox SelectedValue="{Binding QualityLevel}"
								  Style="{StaticResource DarkComboBoxStyle}">
							<ComboBoxItem Content="Fast (Low Quality)" />
							<ComboBoxItem Content="Balanced" IsSelected="True"/>
							<ComboBoxItem Content="High Quality (Slow)"/>
						</ComboBox>
					</StackPanel>

					<!-- Training Duration -->
					<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
						<TextBlock Text="Duration:"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   Width="70"/>
						<Slider Value="{Binding TrainingDuration}"
								Minimum="5"
								Maximum="60"
								Width="130"
								VerticalAlignment="Center"/>
						<TextBlock Text="{Binding TrainingDuration, StringFormat='F0min'}"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   Width="40"
								   Margin="8,0,0,0"/>
					</StackPanel>

					<!-- Start Training Button -->
					<Button Content="Start Training"
							Command="{Binding StartTrainingCommand}"
							Style="{StaticResource PrimaryButtonStyle}"
							Height="40"
							Margin="0,16,0,16"/>
				</StackPanel>
			</ScrollViewer>
		</Border>

		<!-- Left Splitter -->
		<GridSplitter Grid.Column="0"
					  Width="4"
					  Background="{DynamicResource BorderBrush}"
					  HorizontalAlignment="Right"
					  VerticalAlignment="Stretch"/>

		<!-- Center: Training Progress -->
		<Border Grid.Column="1"
				Background="{DynamicResource TertiaryDarkBrush}"
				Margin="0,8">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="ðŸ§  Voice Training"
						   Foreground="{DynamicResource TextPrimaryBrush}"
						   FontSize="24"
						   HorizontalAlignment="Center"
						   Margin="0,0,0,20"/>
				
				<ProgressBar Value="{Binding TrainingProgress}"
							 Minimum="0"
							 Maximum="100"
							 Height="8"
							 Width="400"
							 Background="{DynamicResource SecondaryDarkBrush}"
							 Foreground="{DynamicResource AccentRedBrush}"
							 Visibility="{Binding IsTraining, Converter={StaticResource BooleanToVisibilityConverter}}"/>
				
				<TextBlock Text="{Binding TrainingStatus}"
						   Foreground="{DynamicResource TextPrimaryBrush}"
						   HorizontalAlignment="Center"
						   FontSize="14"
						   Margin="0,12,0,0"/>
			</StackPanel>
		</Border>

		<!-- Right Splitter -->
		<GridSplitter Grid.Column="1"
					  Width="4"
					  Background="{DynamicResource BorderBrush}"
					  HorizontalAlignment="Right"
					  VerticalAlignment="Stretch"/>

		<!-- Right Panel: Cloned Voices -->
		<Border Grid.Column="2"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="0,8,8,0"
				Margin="4,8,8,8">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="Cloned Voices"
						   Foreground="{DynamicResource TextPrimaryBrush}"
						   FontSize="14"
						   FontWeight="Bold"
						   Margin="12,12,12,8"/>

				<ListBox Grid.Row="1"
						 ItemsSource="{Binding ClonedVoices}"
						 Background="Transparent"
						 BorderThickness="0"
						 Margin="12,0">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Border Background="{DynamicResource TertiaryDarkBrush}"
									CornerRadius="4"
									Margin="0,2"
									Padding="8">
								<StackPanel>
									<TextBlock Text="{Binding Name}"
											   Foreground="{DynamicResource TextPrimaryBrush}"
											   FontSize="12"
											   FontWeight="Bold"/>
									<TextBlock Text="{Binding Quality}"
											   Foreground="{DynamicResource TextSecondaryBrush}"
											   FontSize="10"/>
									<StackPanel Orientation="Horizontal" Margin="0,4,0,0">
										<Button Content="Test"
												Style="{StaticResource SecondaryButtonStyle}"
												Height="20"
												Width="40"
												FontSize="9"/>
										<Button Content="Export"
												Style="{StaticResource SecondaryButtonStyle}"
												Height="20"
												Width="45"
												FontSize="9"
												Margin="4,0,0,0"/>
									</StackPanel>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</Border>
	</Grid>
</UserControl>