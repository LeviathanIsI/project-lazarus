<UserControl x:Class="Lazarus.Desktop.Views.HypernetworksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Hypernetworks" FontWeight="Bold" Foreground="White" FontSize="18"/>
                    <TextBlock Text="Style modification networks for cross-attention layers" Foreground="#9ca3af" FontSize="12" Margin="0,2,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Train New" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                    <Button Content="Import" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Hypernetwork List -->
            <Border Grid.Column="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Active Hypernetwork -->
                        <TextBlock Text="Active Hypernetwork" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                        
                        <Border Background="#8b5cf6" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="anime-style-hypernetwork.pt" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Anime art style enhancement • 83 MB" Foreground="#e0e7ff" FontSize="11" Margin="0,4,0,0"/>
                                    <TextBlock Text="Trained for 50,000 steps on anime dataset" Foreground="#e0e7ff" FontSize="10" Margin="0,2,0,0"/>
                                </StackPanel>
                                <TextBox Grid.Column="1" Text="0.8" Background="#6b46c1" Foreground="White" 
                                         BorderThickness="0" Padding="6,4" Width="50" TextAlignment="Center" Margin="8,0"/>
                                <Button Grid.Column="2" Content="Unload" Background="#6b46c1" Foreground="White" 
                                        BorderThickness="0" Padding="8,4" FontSize="11"/>
                            </Grid>
                        </Border>

                        <!-- Available Hypernetworks -->
                        <TextBlock Text="Available Hypernetworks" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                        
                        <Border Background="#374151" CornerRadius="8" Padding="16" Margin="0,0,0,8" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="photorealistic-portraits.pt" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Portrait photography style • 156 MB" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Professional portrait enhancement" Foreground="#10b981" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Load" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Padding="8,4"/>
                            </Grid>
                        </Border>

                        <Border Background="#374151" CornerRadius="8" Padding="16" Margin="0,0,0,8" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="fantasy-art-style.pt" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Fantasy illustration style • 127 MB" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Epic fantasy artwork enhancement" Foreground="#10b981" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Load" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Padding="8,4"/>
                            </Grid>
                        </Border>

                        <Border Background="#374151" CornerRadius="8" Padding="16" Margin="0,0,0,16" Cursor="Hand">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="vintage-film.pt" Foreground="White" FontWeight="Bold"/>
                                    <TextBlock Text="Vintage film aesthetic • 95 MB" Foreground="#9ca3af" FontSize="11"/>
                                    <TextBlock Text="Classic cinema style transfer" Foreground="#10b981" FontSize="10"/>
                                </StackPanel>
                                <Button Grid.Column="1" Content="Load" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Padding="8,4"/>
                            </Grid>
                        </Border>

                        <!-- Training Section -->
                        <Border Background="#1f2937" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Train Custom Hypernetwork" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="Create style-specific networks for cross-attention modification" 
                                           Foreground="#9ca3af" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,12"/>
                                
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Network Name:" Foreground="#9ca3af" Width="100" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="8,4"/>
                                </Grid>

                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Learning Rate:" Foreground="#9ca3af" Width="100" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="0.000005" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="8,4"/>
                                </Grid>

                                <Button Content="Start Training" Background="#8b5cf6" Foreground="White" 
                                        BorderThickness="0" Padding="16,8" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Configuration Panel -->
            <Border Grid.Column="1" Background="#0f0f0f" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="Hypernetwork Settings" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,16"/>
                    
                    <!-- Network Info -->
                    <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="anime-style-hypernetwork" FontWeight="Bold" Foreground="White" FontSize="14"/>
                            <TextBlock Text="Size: 83 MB" Foreground="#9ca3af" FontSize="11" Margin="0,4,0,0"/>
                            <TextBlock Text="Architecture: Linear + Dropout" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                            <TextBlock Text="Training Steps: 50,000" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                            <TextBlock Text="Base Model: SD 1.5" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Strength Control -->
                    <TextBlock Text="Network Strength" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Value="0.8" Minimum="0" Maximum="2" TickFrequency="0.1" Foreground="#8b5cf6"/>
                        <TextBox Grid.Column="1" Text="0.8" Background="#374151" Foreground="White" 
                                 BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                    </Grid>

                    <!-- Application Settings -->
                    <TextBlock Text="Application Settings" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                    <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel>
                            <CheckBox Content="Apply to all attention layers" Foreground="White" IsChecked="True" Margin="0,0,0,8"/>
                            <CheckBox Content="Use gradient checkpointing" Foreground="White" Margin="0,0,0,8"/>
                            <CheckBox Content="Enable dynamic strength" Foreground="White" Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Layer Multiplier" Foreground="#9ca3af" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="1.0" Background="#374151" Foreground="White" 
                                         BorderThickness="0" Padding="4,2" TextAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Training History -->
                    <TextBlock Text="Training Information" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                    <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Dataset:" Foreground="#9ca3af" Width="70"/>
                                <TextBlock Grid.Column="1" Text="Anime images" Foreground="White" FontSize="11"/>
                            </Grid>
                            <Grid Margin="0,0,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Loss:" Foreground="#9ca3af" Width="70"/>
                                <TextBlock Grid.Column="1" Text="0.0847" Foreground="White" FontSize="11"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Created:" Foreground="#9ca3af" Width="70"/>
                                <TextBlock Grid.Column="1" Text="2 weeks ago" Foreground="White" FontSize="11"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Actions -->
                    <Button Content="Apply to Generation" Background="#8b5cf6" Foreground="White" 
                            BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                    <Button Content="View Training Logs" Background="#374151" Foreground="White" 
                            BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                    <Button Content="Export Network" Background="#374151" Foreground="White" 
                            BorderThickness="0" Padding="12,8" HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>