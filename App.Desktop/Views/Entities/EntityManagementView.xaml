<UserControl x:Class="Lazarus.Desktop.Views.Entities.EntityManagementView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 Background="{DynamicResource PrimaryDarkBrush}">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="320" MinWidth="220"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Top Panel: Search & Filter Controls -->
		<Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="8,8,0,0"
				Margin="8,8,8,4">
			<Grid Margin="16,12">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!-- Search Box -->
				<TextBox Grid.Column="0"
						 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
						 Background="{DynamicResource TertiaryDarkBrush}"
						 Foreground="{DynamicResource TextPrimaryBrush}"
						 BorderBrush="{DynamicResource BorderBrush}"
						 Height="32"
						 VerticalContentAlignment="Center"
						 Padding="12,4"
						 Margin="0,0,12,0"
						 ToolTip="Search entities by name, type, or traits"/>

				<!-- Entity Type Filter -->
				<ComboBox Grid.Column="1"
						  SelectedValue="{Binding SelectedEntityTypeFilter}"
						  Style="{StaticResource DarkComboBoxStyle}"
						  MinWidth="140"
						  Height="32"
						  Margin="0,0,12,0"
						  ToolTip="Filter by entity type">
					<ComboBoxItem Content="All Types" IsSelected="True"/>
					<ComboBoxItem Content="Virtual Assistant"/>
					<ComboBoxItem Content="Conversation Partner"/>
					<ComboBoxItem Content="Expert Advisor"/>
					<ComboBoxItem Content="Character Roleplay"/>
					<ComboBoxItem Content="Educational Guide"/>
					<ComboBoxItem Content="Creative Collaborator"/>
				</ComboBox>

				<!-- Sort By -->
				<ComboBox Grid.Column="2"
						  SelectedValue="{Binding SelectedSortOption}"
						  Style="{StaticResource DarkComboBoxStyle}"
						  MinWidth="120"
						  Height="32"
						  Margin="0,0,12,0"
						  ToolTip="Sort entities by criteria">
					<ComboBoxItem Content="Name" IsSelected="True"/>
					<ComboBoxItem Content="Creation Date"/>
					<ComboBoxItem Content="Last Used"/>
					<ComboBoxItem Content="Usage Count"/>
					<ComboBoxItem Content="Entity Type"/>
				</ComboBox>

				<!-- View Options -->
				<StackPanel Grid.Column="3" Orientation="Horizontal">
					<ToggleButton Content="🔍"
								  IsChecked="{Binding ShowFilters}"
								  Width="32"
								  Height="32"
								  Margin="0,0,4,0"
								  ToolTip="Show/hide advanced filters"/>
					<ToggleButton Content="⊞"
								  IsChecked="{Binding IsGridView}"
								  Width="32"
								  Height="32"
								  ToolTip="Switch between grid and list view"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Left Panel: Entity Gallery -->
		<Border Grid.Column="0" Grid.Row="1"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="0,0,0,8"
				Margin="8,4,4,8">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Entity Count Header -->
				<Border Grid.Row="0"
						Background="{DynamicResource TertiaryDarkBrush}"
						Padding="16,8">
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Digital Consciousness Library"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   FontSize="16"
								   FontWeight="Bold"
								   VerticalAlignment="Center"/>
						<Border Background="{DynamicResource AccentRedBrush}"
								CornerRadius="12"
								Padding="8,2"
								Margin="12,0,0,0">
							<TextBlock Text="{Binding TotalEntitiesCount}"
									   Foreground="White"
									   FontSize="12"
									   FontWeight="Bold"/>
						</Border>
					</StackPanel>
				</Border>

				<!-- Entity Grid/List -->
				<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
					<Grid>
						<!-- Grid View -->
						<ItemsControl ItemsSource="{Binding FilteredEntities}"
									  Margin="12"
									  Visibility="{Binding IsGridView, Converter={StaticResource BooleanToVisibilityConverter}}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<WrapPanel Orientation="Horizontal"/>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<Border Background="{DynamicResource TertiaryDarkBrush}"
											CornerRadius="8"
											Width="220"
											Margin="8"
											Padding="12"
											Cursor="Hand">
										<StackPanel>
											<!-- Entity Avatar/Icon -->
											<Border Background="{DynamicResource PrimaryDarkBrush}"
													CornerRadius="4"
													Height="80"
													Width="80"
													HorizontalAlignment="Center"
													Margin="0,0,0,8">
												<TextBlock Text="{Binding Icon}"
														   FontSize="32"
														   HorizontalAlignment="Center"
														   VerticalAlignment="Center"/>
											</Border>

											<!-- Entity Info -->
											<TextBlock Text="{Binding Name}"
													   Foreground="{DynamicResource TextPrimaryBrush}"
													   FontSize="14"
													   FontWeight="Bold"
													   HorizontalAlignment="Center"
													   TextTrimming="CharacterEllipsis"
													   Margin="0,0,0,4"/>

											<TextBlock Text="{Binding EntityType}"
													   Foreground="{DynamicResource TextSecondaryBrush}"
													   FontSize="11"
													   HorizontalAlignment="Center"
													   Margin="0,0,0,8"/>

											<!-- Stats -->
											<Grid Margin="0,0,0,8">
												<Grid.ColumnDefinitions>
													<ColumnDefinition Width="*"/>
													<ColumnDefinition Width="*"/>
												</Grid.ColumnDefinitions>
												<StackPanel Grid.Column="0">
													<TextBlock Text="Created"
															   Foreground="{DynamicResource TextMutedBrush}"
															   FontSize="9"
															   HorizontalAlignment="Center"/>
													<TextBlock Text="{Binding CreatedDate, StringFormat=MM/dd/yy}"
															   Foreground="{DynamicResource TextSecondaryBrush}"
															   FontSize="10"
															   HorizontalAlignment="Center"/>
												</StackPanel>
												<StackPanel Grid.Column="1">
													<TextBlock Text="Uses"
															   Foreground="{DynamicResource TextMutedBrush}"
															   FontSize="9"
															   HorizontalAlignment="Center"/>
													<TextBlock Text="{Binding UsageCount}"
															   Foreground="{DynamicResource TextSecondaryBrush}"
															   FontSize="10"
															   HorizontalAlignment="Center"/>
												</StackPanel>
											</Grid>

											<!-- Action Buttons -->
											<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
												<Button Content="▶️"
														Command="{Binding DataContext.LoadEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Load entity"/>
												<Button Content="📝"
														Command="{Binding DataContext.EditEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Edit entity"/>
												<Button Content="📋"
														Command="{Binding DataContext.CloneEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Clone entity"/>
											</StackPanel>
										</StackPanel>
									</Border>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>

						<!-- List View -->
						<ListBox ItemsSource="{Binding FilteredEntities}"
								 SelectedItem="{Binding SelectedEntity}"
								 Background="Transparent"
								 BorderThickness="0"
								 Margin="12"
								 Visibility="{Binding IsGridView, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
							<ListBox.ItemTemplate>
								<DataTemplate>
									<Border Background="{DynamicResource TertiaryDarkBrush}"
											CornerRadius="4"
											Margin="0,4"
											Padding="12"
											Cursor="Hand">
										<Grid>
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="Auto"/>
												<ColumnDefinition Width="*"/>
												<ColumnDefinition Width="Auto"/>
												<ColumnDefinition Width="Auto"/>
											</Grid.ColumnDefinitions>

											<!-- Icon -->
											<Border Grid.Column="0"
													Background="{DynamicResource PrimaryDarkBrush}"
													CornerRadius="4"
													Width="40"
													Height="40"
													Margin="0,0,12,0">
												<TextBlock Text="{Binding Icon}"
														   FontSize="18"
														   HorizontalAlignment="Center"
														   VerticalAlignment="Center"/>
											</Border>

											<!-- Entity Info -->
											<StackPanel Grid.Column="1" VerticalAlignment="Center">
												<TextBlock Text="{Binding Name}"
														   Foreground="{DynamicResource TextPrimaryBrush}"
														   FontSize="14"
														   FontWeight="Bold"/>
												<StackPanel Orientation="Horizontal">
													<TextBlock Text="{Binding EntityType}"
															   Foreground="{DynamicResource TextSecondaryBrush}"
															   FontSize="11"
															   Margin="0,0,8,0"/>
													<TextBlock Text="•"
															   Foreground="{DynamicResource TextMutedBrush}"
															   FontSize="11"
															   Margin="0,0,8,0"/>
													<TextBlock Text="{Binding CreatedDate, StringFormat=MM/dd/yyyy}"
															   Foreground="{DynamicResource TextMutedBrush}"
															   FontSize="11"/>
												</StackPanel>
											</StackPanel>

											<!-- Usage Stats -->
											<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0">
												<TextBlock Text="📊"
														   FontSize="12"
														   VerticalAlignment="Center"
														   Margin="0,0,4,0"/>
												<TextBlock Text="{Binding UsageCount}"
														   Foreground="{DynamicResource TextSecondaryBrush}"
														   FontSize="12"
														   VerticalAlignment="Center"/>
											</StackPanel>

											<!-- Quick Actions -->
											<StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
												<Button Content="▶️"
														Command="{Binding DataContext.LoadEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Load entity"/>
												<Button Content="📝"
														Command="{Binding DataContext.EditEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Edit entity"/>
												<Button Content="📋"
														Command="{Binding DataContext.CloneEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Clone entity"/>
												<Button Content="🗑️"
														Command="{Binding DataContext.DeleteEntityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
														CommandParameter="{Binding}"
														Style="{StaticResource SecondaryButtonStyle}"
														Width="24"
														Height="24"
														Margin="2"
														ToolTip="Delete entity"/>
											</StackPanel>
										</Grid>
									</Border>
								</DataTemplate>
							</ListBox.ItemTemplate>
						</ListBox>
					</Grid>
				</ScrollViewer>

				<!-- Entity Management Tools -->
				<Border Grid.Row="2"
						Background="{DynamicResource TertiaryDarkBrush}"
						Padding="12">
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<Button Content="➕ New Entity"
								Command="{Binding CreateNewEntityCommand}"
								Style="{StaticResource PrimaryButtonStyle}"
								Height="32"
								MinWidth="100"
								Padding="12,4"
								Margin="4"
								ToolTip="Create new entity"/>
						<Button Content="📥 Import Entity"
								Command="{Binding ImportEntityCommand}"
								Style="{StaticResource SecondaryButtonStyle}"
								Height="32"
								MinWidth="100"
								Padding="12,4"
								Margin="4"
								ToolTip="Import entity from file"/>
						<Button Content="📤 Export Selected"
								Command="{Binding ExportEntityCommand}"
								Style="{StaticResource SecondaryButtonStyle}"
								Height="32"
								MinWidth="120"
								Padding="12,4"
								Margin="4"
								ToolTip="Export selected entity"/>
						<Button Content="🏷️ Create Template"
								Command="{Binding CreateTemplateCommand}"
								Style="{StaticResource SecondaryButtonStyle}"
								Height="32"
								MinWidth="120"
								Padding="12,4"
								Margin="4"
								ToolTip="Create template from entity"/>
					</StackPanel>
				</Border>
			</Grid>
		</Border>

		<!-- Right Panel: Entity Details -->
		<Border Grid.Column="1" Grid.Row="1"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="0,0,8,0"
				Margin="4,4,8,8">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Entity Header -->
				<Border Grid.Row="0"
						Background="{DynamicResource TertiaryDarkBrush}"
						Padding="16,12">
					<StackPanel Visibility="{Binding SelectedEntity, Converter={StaticResource NullToVisibilityConverter}}">
						<StackPanel Orientation="Horizontal" Margin="0,0,0,8">
							<Border Background="{DynamicResource PrimaryDarkBrush}"
									CornerRadius="4"
									Width="48"
									Height="48"
									Margin="0,0,12,0">
								<TextBlock Text="{Binding SelectedEntity.Icon}"
										   FontSize="24"
										   HorizontalAlignment="Center"
										   VerticalAlignment="Center"/>
							</Border>
							<StackPanel VerticalAlignment="Center">
								<TextBlock Text="{Binding SelectedEntity.Name}"
										   Foreground="{DynamicResource TextPrimaryBrush}"
										   FontSize="16"
										   FontWeight="Bold"/>
								<TextBlock Text="{Binding SelectedEntity.EntityType}"
										   Foreground="{DynamicResource TextSecondaryBrush}"
										   FontSize="12"/>
							</StackPanel>
						</StackPanel>
						
						<!-- Status Indicators -->
						<StackPanel Orientation="Horizontal">
							<Border Background="{DynamicResource AccentRedBrush}"
									CornerRadius="2"
									Padding="6,2"
									Margin="0,0,4,0">
								<TextBlock Text="{Binding SelectedEntity.Status}"
										   Foreground="White"
										   FontSize="10"
										   FontWeight="Bold"/>
							</Border>
							<Border Background="{DynamicResource SecondaryDarkBrush}"
									CornerRadius="2"
									Padding="6,2"
									Margin="0,0,4,0">
								<TextBlock Text="{Binding SelectedEntity.Version}"
										   Foreground="{DynamicResource TextSecondaryBrush}"
										   FontSize="10"/>
							</Border>
						</StackPanel>
					</StackPanel>
				</Border>

				<!-- Entity Details Tabs -->
				<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
					<Grid>
						<StackPanel Margin="16" Visibility="{Binding SelectedEntity, Converter={StaticResource NullToVisibilityConverter}}">
						
						<!-- Personality Summary -->
						<TextBlock Text="Personality Summary"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   FontSize="14"
								   FontWeight="Bold"
								   Margin="0,0,0,8"/>
						<Border Background="{DynamicResource TertiaryDarkBrush}"
								CornerRadius="4"
								Padding="12"
								Margin="0,0,0,16">
							<TextBlock Text="{Binding SelectedEntity.PersonalitySummary}"
									   Foreground="{DynamicResource TextSecondaryBrush}"
									   TextWrapping="Wrap"
									   FontSize="12"/>
						</Border>

						<!-- Behavioral Parameters -->
						<TextBlock Text="Behavioral Parameters"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   FontSize="14"
								   FontWeight="Bold"
								   Margin="0,0,0,8"/>
						<Border Background="{DynamicResource TertiaryDarkBrush}"
								CornerRadius="4"
								Padding="12"
								Margin="0,0,0,16">
							<StackPanel>
								<Grid Margin="0,0,0,4">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									<TextBlock Grid.Column="0" Text="Empathy" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
									<TextBlock Grid.Column="1" Text="{Binding SelectedEntity.EmpathyLevel}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" FontWeight="Bold"/>
								</Grid>
								<Grid Margin="0,0,0,4">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									<TextBlock Grid.Column="0" Text="Creativity" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
									<TextBlock Grid.Column="1" Text="{Binding SelectedEntity.CreativityLevel}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" FontWeight="Bold"/>
								</Grid>
								<Grid Margin="0,0,0,4">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="Auto"/>
									</Grid.ColumnDefinitions>
									<TextBlock Grid.Column="0" Text="Formality" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
									<TextBlock Grid.Column="1" Text="{Binding SelectedEntity.FormalityLevel}" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="11" FontWeight="Bold"/>
								</Grid>
							</StackPanel>
						</Border>

						<!-- Performance Metrics -->
						<TextBlock Text="Performance Metrics"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   FontSize="14"
								   FontWeight="Bold"
								   Margin="0,0,0,8"/>
						<Border Background="{DynamicResource TertiaryDarkBrush}"
								CornerRadius="4"
								Padding="12"
								Margin="0,0,0,16">
							<StackPanel>
								<Grid Margin="0,0,0,8">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*"/>
										<ColumnDefinition Width="*"/>
									</Grid.ColumnDefinitions>
									<StackPanel Grid.Column="0">
										<TextBlock Text="Total Conversations"
												   Foreground="{DynamicResource TextSecondaryBrush}"
												   FontSize="10"/>
										<TextBlock Text="{Binding SelectedEntity.TotalConversations}"
												   Foreground="{DynamicResource TextPrimaryBrush}"
												   FontSize="14"
												   FontWeight="Bold"/>
									</StackPanel>
									<StackPanel Grid.Column="1">
										<TextBlock Text="Avg Rating"
												   Foreground="{DynamicResource TextSecondaryBrush}"
												   FontSize="10"/>
										<TextBlock Text="{Binding SelectedEntity.AverageRating, StringFormat=F1}"
												   Foreground="{DynamicResource AccentRedBrush}"
												   FontSize="14"
												   FontWeight="Bold"/>
									</StackPanel>
								</Grid>
								<TextBlock Text="{Binding SelectedEntity.LastUsedDate, StringFormat='Last used: {0:MMM dd, yyyy}'}"
										   Foreground="{DynamicResource TextMutedBrush}"
										   FontSize="10"/>
							</StackPanel>
						</Border>

						<!-- Version History -->
						<TextBlock Text="Version History"
								   Foreground="{DynamicResource TextPrimaryBrush}"
								   FontSize="14"
								   FontWeight="Bold"
								   Margin="0,0,0,8"/>
						<Border Background="{DynamicResource TertiaryDarkBrush}"
								CornerRadius="4"
								Padding="12"
								Margin="0,0,0,16">
							<ItemsControl ItemsSource="{Binding SelectedEntity.VersionHistory}">
								<ItemsControl.ItemTemplate>
									<DataTemplate>
										<Grid Margin="0,0,0,4">
											<Grid.ColumnDefinitions>
												<ColumnDefinition Width="Auto"/>
												<ColumnDefinition Width="*"/>
												<ColumnDefinition Width="Auto"/>
											</Grid.ColumnDefinitions>
											<TextBlock Grid.Column="0"
													   Text="{Binding Version}"
													   Foreground="{DynamicResource AccentRedBrush}"
													   FontSize="11"
													   FontWeight="Bold"
													   Width="40"/>
											<TextBlock Grid.Column="1"
													   Text="{Binding Description}"
													   Foreground="{DynamicResource TextSecondaryBrush}"
													   FontSize="11"
													   TextTrimming="CharacterEllipsis"/>
											<TextBlock Grid.Column="2"
													   Text="{Binding Date, StringFormat=MM/dd}"
													   Foreground="{DynamicResource TextMutedBrush}"
													   FontSize="10"/>
										</Grid>
									</DataTemplate>
								</ItemsControl.ItemTemplate>
							</ItemsControl>
						</Border>
						</StackPanel>

						<!-- No Selection State -->
						<StackPanel VerticalAlignment="Center"
									HorizontalAlignment="Center"
									Visibility="{Binding SelectedEntity, Converter={StaticResource NullToInverseVisibilityConverter}}">
						<TextBlock Text="🤖"
								   FontSize="48"
								   HorizontalAlignment="Center"
								   Margin="0,0,0,12"/>
						<TextBlock Text="Select an entity to view details"
								   Foreground="{DynamicResource TextMutedBrush}"
								   FontSize="14"
								   HorizontalAlignment="Center"/>
						</StackPanel>
					</Grid>
				</ScrollViewer>

				<!-- Entity Actions -->
				<Border Grid.Row="2"
						Background="{DynamicResource TertiaryDarkBrush}"
						Padding="12"
						Visibility="{Binding SelectedEntity, Converter={StaticResource NullToVisibilityConverter}}">
					<StackPanel>
						<Button Content="🚀 Load Entity"
								Command="{Binding LoadEntityCommand}"
								CommandParameter="{Binding SelectedEntity}"
								Style="{StaticResource PrimaryButtonStyle}"
								Height="32"
								MinWidth="200"
								Padding="12,4"
								Margin="0,0,0,4"
								ToolTip="Load entity for interaction"/>
						
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
							<Button Content="✏️ Edit"
									Command="{Binding EditEntityCommand}"
									CommandParameter="{Binding SelectedEntity}"
									Style="{StaticResource SecondaryButtonStyle}"
									Height="28"
									MinWidth="60"
									Padding="8,4"
									Margin="2"
									ToolTip="Edit entity"/>
							<Button Content="📋 Clone"
									Command="{Binding CloneEntityCommand}"
									CommandParameter="{Binding SelectedEntity}"
									Style="{StaticResource SecondaryButtonStyle}"
									Height="28"
									MinWidth="60"
									Padding="8,4"
									Margin="2"
									ToolTip="Clone entity"/>
							<Button Content="📤 Export"
									Command="{Binding ExportEntityCommand}"
									CommandParameter="{Binding SelectedEntity}"
									Style="{StaticResource SecondaryButtonStyle}"
									Height="28"
									MinWidth="60"
									Padding="8,4"
									Margin="2"
									ToolTip="Export entity"/>
							<Button Content="🗑️ Delete"
									Command="{Binding DeleteEntityCommand}"
									CommandParameter="{Binding SelectedEntity}"
									Style="{StaticResource SecondaryButtonStyle}"
									Height="28"
									MinWidth="60"
									Padding="8,4"
									Margin="2"
									ToolTip="Delete entity"/>
						</StackPanel>
					</StackPanel>
				</Border>
			</Grid>
		</Border>
	</Grid>
</UserControl>