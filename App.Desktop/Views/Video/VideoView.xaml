<UserControl x:Class="Lazarus.Desktop.Views.Video.VideoView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Lazarus.Desktop.Views.Video"
			 mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- tabs -->
			<RowDefinition Height="*"/>
			<!-- content -->
		</Grid.RowDefinitions>
		<!-- SubTab Buttons -->
		<StackPanel Grid.Row="0"
					Orientation="Horizontal"
					Background="{DynamicResource TertiaryDarkBrush}"
					Margin="8">
			<Button x:Name="Text2VideoTab"
					Content="Text2Video"
					Tag="Text2Video"
					Style="{StaticResource SubTabButtonStyle}"
					Click="SubTabButton_Click"
					Margin="4,0"/>
			<Button x:Name="Video2VideoTab"
					Content="Video2Video"
					Tag="Video2Video"
					Style="{StaticResource SubTabButtonStyle}"
					Click="SubTabButton_Click"
					Margin="4,0"/>
			<Button x:Name="MotionControlTab"
					Content="Motion Control"
					Tag="MotionControl"
					Style="{StaticResource SubTabButtonStyle}"
					Click="SubTabButton_Click"
					Margin="4,0"/>
			<Button x:Name="TemporalEffectsTab"
					Content="Temporal Effects"
					Tag="TemporalEffects"
					Style="{StaticResource SubTabButtonStyle}"
					Click="SubTabButton_Click"
					Margin="4,0"/>
		</StackPanel>
		<!-- Content Panels -->
		<Grid Grid.Row="1">
			<local:Text2VideoView x:Name="Text2VideoContent"
								 Visibility="Visible"/>
			<local:Video2VideoView x:Name="Video2VideoContent"
							 Visibility="Collapsed"/>
			<local:MotionControlView x:Name="MotionControlContent"
								   Visibility="Collapsed"/>
			<local:TemporalEffectsView x:Name="TemporalEffectsContent"
							Visibility="Collapsed"/>
		</Grid>
	</Grid>
</UserControl>