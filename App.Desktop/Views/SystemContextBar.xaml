<UserControl x:Class="Lazarus.Desktop.Views.SystemContextBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="1200">
    
    <!-- System Brain: Always-visible context that eliminates user blindness -->
    <Border Background="{DynamicResource TertiaryDarkBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,0,0,1"
            Padding="16,8">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- API Status -->
                <ColumnDefinition Width="*"/>     <!-- Model & Runner -->
                <ColumnDefinition Width="Auto"/>  <!-- Performance -->
                <ColumnDefinition Width="Auto"/>  <!-- Quick Actions -->
            </Grid.ColumnDefinitions>
            
            <!-- API Status Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                <!-- Status Dot -->
                <Ellipse Width="12" Height="12" 
                         VerticalAlignment="Center"
                         Margin="0,0,8,0">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{Binding ApiStatusColor}"/>
                    </Ellipse.Fill>
                </Ellipse>
                
                <TextBlock Text="{Binding ApiStatus}" 
                           FontSize="12"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
                
                <!-- Server Port -->
                <TextBlock Text="{Binding ServerPort, StringFormat=:{0}}" 
                           FontSize="11"
                           FontFamily="Consolas"
                           Foreground="{DynamicResource TextMutedBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"/>
            </StackPanel>
            
            <!-- Model & Runner Information -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <!-- Model Info -->
                <Border Background="{DynamicResource SecondaryDarkBrush}" 
                        CornerRadius="4" 
                        Padding="12,6"
                        Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ§ " 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentModel}" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <TextBlock FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ctx â€¢ {1} t/s">
                                        <Binding Path="ContextLength"/>
                                        <Binding Path="TokensPerSecond"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Runner Info -->
                <Border Background="{DynamicResource SecondaryDarkBrush}" 
                        CornerRadius="4" 
                        Padding="12,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš¡" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentRunner}" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"/>
                            
                            <TextBlock Text="{Binding GpuInfo}" 
                                       FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <!-- Performance & VRAM -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="24,0">
                <!-- VRAM Usage -->
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="VRAM" 
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <ProgressBar Width="60" 
                                     Height="6" 
                                     Value="{Binding VramPercentage, Mode=OneWay}"
                                     Maximum="100"
                                     Background="{DynamicResource SecondaryDarkBrush}"
                                     Foreground="{DynamicResource AccentRedBrush}"
                                     VerticalAlignment="Center"
                                     Margin="0,0,8,0"/>
                        
                        <TextBlock Text="{Binding VramUsage}" 
                                   FontSize="10"
                                   FontFamily="Consolas"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Job Queue -->
                <StackPanel Visibility="{Binding HasQueuedJobs, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="QUEUE" 
                               FontSize="10"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                    
                    <Border Background="{DynamicResource WarningBrush}" 
                            CornerRadius="8" 
                            Padding="8,2">
                        <TextBlock Text="{Binding QueuedJobs}" 
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Quick Actions -->
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <!-- Switch Model -->
                <Button Content="Switch" 
                        Command="{Binding SwitchModelCommand}"
                        FontSize="11"
                        Padding="12,4"
                        Background="{DynamicResource AccentRedBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,6,0"
                        ToolTip="Switch to different model"/>
                
                <!-- Unload Model -->
                <Button Content="Unload" 
                        Command="{Binding UnloadModelCommand}"
                        FontSize="11"
                        Padding="12,4"
                        Background="{DynamicResource SecondaryDarkBrush}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Margin="0,0,6,0"
                        ToolTip="Unload current model"/>
                
                <!-- Restart Runner -->
                <Button Content="Restart" 
                        Command="{Binding RestartRunnerCommand}"
                        FontSize="11"
                        Padding="12,4"
                        Background="{DynamicResource SecondaryDarkBrush}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        ToolTip="Restart runner process"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>