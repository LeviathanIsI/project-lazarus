<UserControl x:Class="Lazarus.Desktop.Views.ControlNetsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#1a1a1a" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ControlNet Models" FontWeight="Bold" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Install from Hub" Background="#374151" Foreground="White" BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                    <Button Content="Browse Local" Background="#8b5cf6" Foreground="White" BorderThickness="0" Padding="12,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- ControlNet Grid -->
            <Border Grid.Column="0" Background="#0f0f0f" CornerRadius="8" Padding="16" Margin="0,0,8,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <UniformGrid Columns="2">
                        <!-- Canny Edge Detection -->
                        <Border Background="#374151" CornerRadius="8" Margin="4" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Canny Edge" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <Border Grid.Column="1" Background="#10b981" CornerRadius="12" Padding="8,2">
                                        <TextBlock Text="Loaded" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="Edge detection and line art control" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Configure" Background="#8b5cf6" Foreground="White" 
                                            BorderThickness="0" Padding="8,4" FontSize="11"/>
                                    <Button Grid.Column="1" Content="âš™ï¸" Background="#1f2937" Foreground="White" 
                                            BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Depth Estimation -->
                        <Border Background="#1f2937" CornerRadius="8" Margin="4" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Depth" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <Border Grid.Column="1" Background="#6b7280" CornerRadius="12" Padding="8,2">
                                        <TextBlock Text="Available" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="3D depth and perspective control" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Download" Background="#374151" Foreground="#9ca3af" 
                                            BorderThickness="0" Padding="8,4" FontSize="11"/>
                                    <Button Grid.Column="1" Content="âš™ï¸" Background="#1f2937" Foreground="White" 
                                            BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- OpenPose -->
                        <Border Background="#1f2937" CornerRadius="8" Margin="4" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="OpenPose" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <Border Grid.Column="1" Background="#6b7280" CornerRadius="12" Padding="8,2">
                                        <TextBlock Text="Available" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="Human pose and gesture control" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Download" Background="#374151" Foreground="#9ca3af" 
                                            BorderThickness="0" Padding="8,4" FontSize="11"/>
                                    <Button Grid.Column="1" Content="âš™ï¸" Background="#1f2937" Foreground="White" 
                                            BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Scribble -->
                        <Border Background="#1f2937" CornerRadius="8" Margin="4" Padding="16">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Scribble" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <Border Grid.Column="1" Background="#6b7280" CornerRadius="12" Padding="8,2">
                                        <TextBlock Text="Available" Foreground="White" FontSize="10"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="Hand-drawn sketch guidance" Foreground="#9ca3af" FontSize="11" Margin="0,0,0,8"/>
                                <TextBlock Text="Size: 1.44 GB" Foreground="#9ca3af" FontSize="10" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Download" Background="#374151" Foreground="#9ca3af" 
                                            BorderThickness="0" Padding="8,4" FontSize="11"/>
                                    <Button Grid.Column="1" Content="âš™ï¸" Background="#1f2937" Foreground="White" 
                                            BorderThickness="0" Width="28" Height="24" Margin="4,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </ScrollViewer>
            </Border>

            <!-- Configuration Panel -->
            <Border Grid.Column="1" Background="#0f0f0f" CornerRadius="8" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="ControlNet Configuration" FontWeight="Bold" Foreground="White" FontSize="16" Margin="0,0,0,16"/>
                        
                        <!-- Selected Model -->
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <TextBlock Text="Canny Edge Detection" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                <TextBlock Text="Version: 1.1" Foreground="#9ca3af" FontSize="11" Margin="0,4,0,0"/>
                                <TextBlock Text="Resolution: 512x512" Foreground="#9ca3af" FontSize="11" Margin="0,2,0,0"/>
                                <TextBlock Text="Status: Active" Foreground="#10b981" FontSize="11" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Control Weight -->
                        <TextBlock Text="Control Weight" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Slider Value="1.0" Minimum="0" Maximum="2" TickFrequency="0.1" Foreground="#8b5cf6"/>
                            <TextBox Grid.Column="1" Text="1.0" Background="#374151" Foreground="White" 
                                     BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                        </Grid>

                        <!-- Guidance Start/End -->
                        <TextBlock Text="Guidance Start" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Slider Value="0.0" Minimum="0" Maximum="1" TickFrequency="0.05" Foreground="#8b5cf6"/>
                            <TextBox Grid.Column="1" Text="0.0" Background="#374151" Foreground="White" 
                                     BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="Guidance End" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <Slider Value="1.0" Minimum="0" Maximum="1" TickFrequency="0.05" Foreground="#8b5cf6"/>
                            <TextBox Grid.Column="1" Text="1.0" Background="#374151" Foreground="White" 
                                     BorderThickness="0" Padding="8,4" TextAlignment="Center"/>
                        </Grid>

                        <!-- Preprocessor Settings -->
                        <TextBlock Text="Preprocessor Settings" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="#1a1a1a" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Low Threshold:" Foreground="#9ca3af" Width="90"/>
                                    <TextBox Grid.Column="1" Text="100" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="4,2"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="High Threshold:" Foreground="#9ca3af" Width="90"/>
                                    <TextBox Grid.Column="1" Text="200" Background="#374151" Foreground="White" 
                                             BorderThickness="0" Padding="4,2"/>
                                </Grid>
                                <CheckBox Content="Enable Preprocessor" Foreground="White" IsChecked="True"/>
                            </StackPanel>
                        </Border>

                        <!-- Input/Reference Image -->
                        <TextBlock Text="Reference Image" FontWeight="SemiBold" Foreground="White" FontSize="14" Margin="0,0,0,8"/>
                        <Border Background="#1f2937" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ–¼ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Drop reference image here" Foreground="#9ca3af" HorizontalAlignment="Center"/>
                                <TextBlock Text="PNG, JPG, WebP supported" Foreground="#6b7280" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Actions -->
                        <Button Content="Apply to Generation" Background="#8b5cf6" Foreground="White" 
                                BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="Test Preprocessor" Background="#374151" Foreground="White" 
                                BorderThickness="0" Padding="12,8" Margin="0,0,0,8" HorizontalAlignment="Stretch"/>
                        <Button Content="Reset Settings" Background="#dc2626" Foreground="White" 
                                BorderThickness="0" Padding="12,8" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>