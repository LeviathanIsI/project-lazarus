<UserControl x:Class="Lazarus.Desktop.Views.ParameterUsageHeatMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="{DynamicResource SecondaryDarkBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{DynamicResource PrimaryDarkBrush}" 
                Padding="20" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Parameter Usage Heat Maps" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Visual analytics for parameter interaction patterns across ViewModes and expertise levels" 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- ViewMode Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <TextBlock Text="ViewMode:" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="ViewModeSelector"
                              SelectedItem="{Binding SelectedViewMode}"
                              ItemsSource="{Binding AvailableViewModes}"
                              Width="120"
                              Background="{DynamicResource TertiaryDarkBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
                
                <!-- Expertise Level Filter -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Expertise:" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="ExpertiseLevelSelector"
                              SelectedItem="{Binding SelectedExpertiseLevel}"
                              ItemsSource="{Binding AvailableExpertiseLevels}"
                              Width="120"
                              Background="{DynamicResource TertiaryDarkBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Controls Panel -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" 
                Background="{DynamicResource TertiaryDarkBrush}" 
                Padding="15" 
                Margin="0,0,0,10"
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Time Range Filter -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Time Range:" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <ComboBox x:Name="TimeRangeSelector"
                              SelectedItem="{Binding SelectedTimeRange}"
                              ItemsSource="{Binding AvailableTimeRanges}"
                              Width="150"
                              Background="{DynamicResource TertiaryDarkBrush}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"/>
                </StackPanel>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0">
                    <Button Content="🔄 Refresh Data"
                            Command="{Binding RefreshDataCommand}"
                            Background="{DynamicResource AccentRedBrush}"
                            Foreground="White"
                            Padding="12,6"
                            Margin="0,0,10,0"
                            BorderThickness="0"/>
                    
                    <Button Content="📊 Generate Report"
                            Command="{Binding GenerateReportCommand}"
                            Background="{DynamicResource AccentRedBrush}"
                            Foreground="White"
                            Padding="12,6"
                            Margin="0,0,10,0"
                            BorderThickness="0"/>
                    
                    <Button Content="📤 Export"
                            Command="{Binding ExportDataCommand}"
                            Background="{DynamicResource TertiaryDarkBrush}"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            Padding="12,6"
                            BorderThickness="1"/>
                </StackPanel>
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            Visibility="{Binding IsGeneratingHeatMap, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="🔄 Generating..." 
                               Foreground="{DynamicResource AccentRedBrush}" 
                               VerticalAlignment="Center" 
                               FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Heat Map Visualization -->
        <Border Grid.Row="2" Grid.Column="0" 
                Background="{DynamicResource PrimaryDarkBrush}" 
                Padding="15" 
                Margin="0,0,10,10"
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Heat Map Title -->
                <TextBlock Grid.Row="0" 
                           Text="Parameter Usage Intensity Heat Map" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="{DynamicResource TextPrimaryBrush}" 
                           Margin="0,0,0,15"/>
                
                <!-- Heat Map Canvas -->
                <ScrollViewer Grid.Row="1" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource SecondaryDarkBrush}">
                    <Grid x:Name="HeatMapGrid" 
                          Background="{DynamicResource SecondaryDarkBrush}"
                          MinWidth="600" 
                          MinHeight="400">
                        
                        <!-- Dynamic heat map cells will be generated here -->
                        <ItemsControl ItemsSource="{Binding HeatMapCells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="40" 
                                            Height="30" 
                                            Background="{Binding IntensityBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0.5"
                                            Margin="1"
                                            ToolTip="{Binding ToolTipText}">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="{Binding XPosition}" Y="{Binding YPosition}"/>
                                        </Border.RenderTransform>
                                        
                                        <Grid>
                                            <TextBlock Text="{Binding UsageCount}" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       Foreground="{Binding TextColor}"
                                                       FontSize="10"
                                                       FontWeight="Medium"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Parameter Labels (Y-Axis) -->
                        <ItemsControl ItemsSource="{Binding ParameterLabels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               FontSize="11"
                                               FontWeight="Medium">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform X="{Binding XPosition}" Y="{Binding YPosition}"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Time Period Labels (X-Axis) -->
                        <ItemsControl ItemsSource="{Binding TimePeriodLabels}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Text}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="10">
                                        <TextBlock.RenderTransform>
                                            <TransformGroup>
                                                <RotateTransform Angle="-45"/>
                                                <TranslateTransform X="{Binding XPosition}" Y="{Binding YPosition}"/>
                                            </TransformGroup>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
                
                <!-- Heat Map Legend -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource TertiaryDarkBrush}" 
                        Padding="10" 
                        Margin="0,10,0,0"
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Usage Intensity:" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        
                        <!-- Legend Gradient -->
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="30" Height="15" Fill="#1a237e" Margin="2,0"/>
                            <Rectangle Width="30" Height="15" Fill="#303f9f" Margin="2,0"/>
                            <Rectangle Width="30" Height="15" Fill="#3f51b5" Margin="2,0"/>
                            <Rectangle Width="30" Height="15" Fill="#ff9800" Margin="2,0"/>
                            <Rectangle Width="30" Height="15" Fill="#ff5722" Margin="2,0"/>
                            <Rectangle Width="30" Height="15" Fill="#d32f2f" Margin="2,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="High" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Analytics Panel -->
        <Border Grid.Row="2" Grid.Column="1" 
                Background="{DynamicResource PrimaryDarkBrush}" 
                Padding="15" 
                Margin="0,0,0,10"
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Usage Statistics -->
                    <TextBlock Text="📊 Usage Statistics" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,0,0,15"/>
                    
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Total Interactions:" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding TotalInteractions, StringFormat=\{0:N0\}}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   FontWeight="Medium"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Most Used Parameter:" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding MostUsedParameter}" 
                                   Foreground="{DynamicResource AccentRedBrush}" 
                                   FontWeight="Medium"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Peak Usage Time:" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{Binding PeakUsageTime}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   FontWeight="Medium"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Avg Session Duration:" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="{Binding AverageSessionDuration}" 
                                   Foreground="{DynamicResource TextPrimaryBrush}" 
                                   FontWeight="Medium"/>
                    </Grid>
                    
                    <!-- Top Parameters -->
                    <TextBlock Text="🔥 Most Active Parameters" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,20,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding TopParameters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding ParameterName}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               FontWeight="Medium"/>
                                    
                                    <Rectangle Grid.Column="1" 
                                               Width="{Binding UsageBarWidth}" 
                                               Height="4" 
                                               Fill="{DynamicResource AccentRedBrush}" 
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding UsageCount}" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Right"
                                               FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Insights -->
                    <TextBlock Text="💡 Usage Insights" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" 
                               Margin="0,20,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding UsageInsights}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource TertiaryDarkBrush}" 
                                        Padding="12" 
                                        Margin="0,0,0,8" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" 
                                                   Foreground="{DynamicResource AccentRedBrush}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   TextWrapping="Wrap" 
                                                   FontSize="11" 
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Detailed Analytics View -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" 
                Background="{DynamicResource PrimaryDarkBrush}" 
                Padding="15" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1">
            <TabControl Background="Transparent" 
                        BorderThickness="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="{DynamicResource TertiaryDarkBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="Margin" Value="0,0,2,0"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </TabControl.Resources>
                
                <!-- Parameter Trends Tab -->
                <TabItem Header="📈 Parameter Trends">
                    <Grid>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Grid MinWidth="800" MinHeight="200">
                                <!-- Trend chart placeholder -->
                                <ItemsControl ItemsSource="{Binding ParameterTrends}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource SecondaryDarkBrush}" 
                                                    Padding="10" 
                                                    Margin="0,0,0,5" 
                                                    BorderBrush="{DynamicResource BorderBrush}" 
                                                    BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="200"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding ParameterName}" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}" 
                                                               FontWeight="Medium"/>
                                                    
                                                    <!-- Trend line visualization -->
                                                    <Canvas Grid.Column="1" Height="30">
                                                        <Polyline Points="{Binding TrendPoints}" 
                                                                  Stroke="{DynamicResource AccentRedBrush}" 
                                                                  StrokeThickness="2"/>
                                                    </Canvas>
                                                    
                                                    <TextBlock Grid.Column="2" 
                                                               Text="{Binding TrendDirection}" 
                                                               Foreground="{Binding TrendColor}" 
                                                               HorizontalAlignment="Right" 
                                                               FontWeight="Medium"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                
                <!-- Session Analysis Tab -->
                <TabItem Header="⏱️ Session Analysis">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SessionAnalytics}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SecondaryDarkBrush}" 
                                                Padding="15" 
                                                Margin="0,0,0,10" 
                                                BorderBrush="{DynamicResource BorderBrush}" 
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding SessionDate, StringFormat=Session: \{0:yyyy-MM-dd HH:mm\}}" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}" 
                                                               FontWeight="SemiBold"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Duration}" 
                                                               Foreground="{DynamicResource AccentRedBrush}" 
                                                               FontWeight="Medium"/>
                                                </Grid>
                                                
                                                <TextBlock Grid.Row="1" 
                                                           Text="{Binding Summary}" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                                           TextWrapping="Wrap" 
                                                           Margin="0,8,0,0"/>
                                                
                                                <StackPanel Grid.Row="2" 
                                                            Orientation="Horizontal" 
                                                            Margin="0,8,0,0">
                                                    <TextBlock Text="{Binding InteractionCount, StringFormat=\{0\} interactions}" 
                                                               Foreground="{DynamicResource TextMutedBrush}" 
                                                               FontSize="11" 
                                                               Margin="0,0,20,0"/>
                                                    <TextBlock Text="{Binding ViewMode, StringFormat=ViewMode: \{0\}}" 
                                                               Foreground="{DynamicResource TextMutedBrush}" 
                                                               FontSize="11"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                
                <!-- Recommendations Tab -->
                <TabItem Header="🎯 Recommendations">
                    <Grid>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Recommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource TertiaryDarkBrush}" 
                                                Padding="15" 
                                                Margin="0,0,0,10" 
                                                BorderBrush="{DynamicResource AccentRedBrush}" 
                                                BorderThickness="1,0,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Priority}" 
                                                           Foreground="{Binding PriorityColor}" 
                                                           FontWeight="Bold" 
                                                           FontSize="12" 
                                                           VerticalAlignment="Top"/>
                                                
                                                <StackPanel Grid.Column="1" Margin="15,0">
                                                    <TextBlock Text="{Binding Title}" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}" 
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                                               TextWrapping="Wrap" 
                                                               Margin="0,4,0,8"/>
                                                    <TextBlock Text="{Binding ActionItem}" 
                                                               Foreground="{DynamicResource AccentRedBrush}" 
                                                               FontWeight="Medium" 
                                                               FontSize="11"/>
                                                </StackPanel>
                                                
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Impact}" 
                                                           Foreground="{DynamicResource TextMutedBrush}" 
                                                           FontSize="10" 
                                                           VerticalAlignment="Top"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>