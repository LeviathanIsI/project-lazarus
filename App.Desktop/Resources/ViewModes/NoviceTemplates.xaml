                           Style="{DynamicResource HeadingSmallStyle}"
                           Margin="0,0,0,10"
                           Visibility="{Binding HasDatasets, Converter={StaticResource BoolToVisibility}}"/>
                
                <ItemsControl ItemsSource="{Binding Datasets}"
                              Visibility="{Binding HasDatasets, Converter={StaticResource BoolToVisibility}}">
