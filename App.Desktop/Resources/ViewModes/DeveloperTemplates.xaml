                            CornerRadius="4" Padding="8" Margin="0,8,0,0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding DebugOutput}" 
                                       Foreground="{DynamicResource AccentRedBrush}"
                                       FontFamily="Consolas" FontSize="9"
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Performance Metrics Panel -->
            <Border Grid.Column="2" Background="{DynamicResource SecondaryDarkBrush}" 
                    CornerRadius="0,8,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="System Metrics" 
                               Style="{DynamicResource HeadingSmallStyle}"
                               Foreground="{DynamicResource AccentRedBrush}"
                               Margin="0,0,0,16"/>
                    
                    <!-- Performance Stats -->
                    <Border Background="{DynamicResource TertiaryDarkBrush}" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="PERFORMANCE" FontSize="9" Foreground="{DynamicResource AccentRedBrush}" Margin="0,0,0,4"/>
