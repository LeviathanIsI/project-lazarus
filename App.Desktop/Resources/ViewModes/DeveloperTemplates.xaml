    <!-- Text2Image Template - Developer Mode -->
    <DataTemplate x:Key="Text2ImageTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Technical Control Panel -->
            <Border Grid.Column="0" Background="{DynamicResource SecondaryDarkBrush}" 
                    CornerRadius="8,0,0,8" Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Pipeline Controls" 
                                   Style="{DynamicResource HeadingSmallStyle}"
                                   Foreground="{DynamicResource AccentRedBrush}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Command Palette -->
                        <Border Background="{DynamicResource TertiaryDarkBrush}" CornerRadius="4" Padding="8" Margin="0,0,0,16">
                            <TextBox Text="{Binding CommandPalette, UpdateSourceTrigger=PropertyChanged}" 
                                     Foreground="{DynamicResource AccentRedBrush}"
                                     Background="Transparent" BorderThickness="0"
                                     FontFamily="Consolas" FontSize="10"
                                     ToolTip="Direct parameter access: temp=0.8 cfg=7.5"/>
                        </Border>
                        
                        <!-- Prompt Engineering -->
                        <TextBlock Text="PROMPT" Style="{DynamicResource CaptionTextStyle}" 
                                   Foreground="{DynamicResource AccentRedBrush}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource DarkTextBoxStyle}" 
                                 MinHeight="60" TextWrapping="Wrap" AcceptsReturn="True"
                                 Margin="0,0,0,8"/>
                        
                        <TextBlock Text="NEGATIVE" Style="{DynamicResource CaptionTextStyle}" 
                                   Foreground="{DynamicResource AccentRedBrush}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NegativePrompt, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{DynamicResource DarkTextBoxStyle}" 
                                 MinHeight="40" TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <!-- Technical Parameters -->
                        <Expander Header="SAMPLING CONTROL" IsExpanded="True" Margin="0,0,0,8">
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Column 1 -->
                                <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                    <TextBlock Text="STEPS" FontSize="9" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Steps, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="CFG" FontSize="9" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding CfgScale, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                                    
                                    <TextBlock Text="SEED" FontSize="9" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding Seed, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                                </StackPanel>
                                
                                <!-- Column 2 -->
                                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                    <TextBlock Text="SAMPLER" FontSize="9" Margin="0,0,0,2"/>
                                    <ComboBox SelectedValue="{Binding Sampler}" Margin="0,0,0,8">
                                        <ComboBoxItem Content="dpmpp_2m_karras" Tag="dpmpp_2m_karras"/>
                                        <ComboBoxItem Content="euler_a" Tag="euler_a"/>
                                        <ComboBoxItem Content="ddim" Tag="ddim"/>
                                        <ComboBoxItem Content="plms" Tag="plms"/>
                                        <ComboBoxItem Content="dpm_2" Tag="dpm_2"/>
                                    </ComboBox>
                                    
                                    <TextBlock Text="BATCH" FontSize="9" Margin="0,0,0,2"/>
                                    <TextBox Text="{Binding BatchSize, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                                    
                                    <Button Content="🎲" Command="{Binding RandomizeSeedCommand}" 
                                            Width="24" Height="24" FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </Expander>
                        
                        <!-- Experimental Parameters -->
                        <Expander Header="EXPERIMENTAL" IsExpanded="False" Margin="0,0,0,8">
                            <StackPanel Margin="0,8,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Temperature" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Text="{Binding Temperature, UpdateSourceTrigger=PropertyChanged}" 
                                             Background="{DynamicResource ErrorBrush}" Opacity="0.8"
                                             ToolTip="⚠️ EXPERIMENTAL: >1.8 unpredictable"/>
                                </Grid>
                                
                                <CheckBox Content="Enable Logit Bias" IsChecked="{Binding UseLogitBias}" 
                                          Foreground="{DynamicResource ErrorBrush}" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Generate with Debug -->
