                                <TextBlock Text="Epoch:" FontSize="8"/>
                                <TextBlock Text="{Binding CurrentEpoch, StringFormat={}{0}/{1}}" 
                                           HorizontalAlignment="Right" FontSize="8" 
                                           Foreground="{DynamicResource AccentRedBrush}"/>
