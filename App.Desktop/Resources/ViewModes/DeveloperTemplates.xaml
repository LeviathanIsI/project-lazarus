                            <Grid>
                                <TextBlock Text="Memory:" FontSize="8"/>
                                <TextBlock Text="{Binding GpuMemory, StringFormat={}{0:F1}GB}" 
                                           HorizontalAlignment="Right" FontSize="8" 
                                           Foreground="{DynamicResource AccentRedBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
