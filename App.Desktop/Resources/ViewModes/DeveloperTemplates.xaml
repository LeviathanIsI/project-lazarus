                            Padding="10,4" FontSize="10"/>
                    <Button Content="💾 Checkpoint" 
                            Command="{Binding SaveCheckpointCommand}" 
                            Background="{DynamicResource SuccessBrush}" 
                            Padding="10,4" FontSize="10"/>
                </StackPanel>
