                                Command="{Binding GenerateCommand}"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Padding="0,12" FontSize="12" FontWeight="Bold"
                                Margin="0,16,0,8"/>
                        
                        <Button Content="📋 Export Config" 
                                Command="{Binding ExportConfigCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Margin="0,0,0,8"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Preview + Debug Output -->
            <Border Grid.Column="1" Background="{DynamicResource TertiaryDarkBrush}" 
                    Padding="16" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0">
