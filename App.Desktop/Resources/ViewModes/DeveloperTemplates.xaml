                            <TextBlock Text="{Binding TokensPerSecond, StringFormat={}Speed: {0:F1} it/s}" FontSize="10"/>
                            <TextBlock Text="{Binding MemoryUsage, StringFormat={}VRAM: {0}MB}" FontSize="10"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Model Info -->
                    <Border Background="{DynamicResource TertiaryDarkBrush}" CornerRadius="4" Padding="8" Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="PIPELINE" FontSize="9" Foreground="{DynamicResource AccentRedBrush}" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ModelName}" FontSize="10"/>
                            <TextBlock Text="{Binding ModelPrecision, StringFormat={}Precision: {0}}" FontSize="10"/>
                            <TextBlock Text="{Binding ActiveLoRAs, StringFormat={}LoRAs: {0}}" FontSize="10"/>
