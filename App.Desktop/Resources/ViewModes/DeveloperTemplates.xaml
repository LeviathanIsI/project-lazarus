                                               Foreground="{DynamicResource AccentRedBrush}"/>
                                </Grid>
                                <Grid>
                                    <TextBlock Text="SNR:" FontSize="9"/>
                                    <TextBlock Text="{Binding SignalToNoiseRatio, StringFormat={}{0:F1} dB}" 
                                               HorizontalAlignment="Right" FontSize="9" 
                                               Foreground="{DynamicResource AccentRedBrush}"/>
