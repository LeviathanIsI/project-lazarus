                                <TextBox Style="{DynamicResource DarkTextBoxStyle}" Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Archetype" Margin="0,0,0,4"/>
                                <ComboBox Style="{DynamicResource DarkComboBoxStyle}" Margin="0,0,0,8">
