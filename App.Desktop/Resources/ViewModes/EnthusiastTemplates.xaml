                                    <ComboBoxItem Content="Abstract Form"/>
                                    <ComboBoxItem Content="Custom Model"/>
                                </ComboBox>
                            </StackPanel>
                        </Expander>
                        
                        <!-- Create Button -->
                        <Button Content="Create Entity" 
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Padding="0,12" FontSize="14" FontWeight="SemiBold"/>
