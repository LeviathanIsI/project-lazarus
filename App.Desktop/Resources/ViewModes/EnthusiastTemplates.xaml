                        <Button Content="Export Screenshot" 
                                Command="{Binding SaveScreenshotCommand}"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Visibility="{Binding HasModel, Converter={StaticResource BoolToVisibility}}"
