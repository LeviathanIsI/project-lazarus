<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- LIGHT THEME: Clean professional brightness - inverted dark palette -->
    
    <!-- Primary Background Colors - Inverted to Light -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#ffffff"/>          <!-- Pure white base -->
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#f8fafc"/>        <!-- Off-white panels -->
    <SolidColorBrush x:Key="TertiaryDarkBrush" Color="#f1f5f9"/>         <!-- Input/control backgrounds -->
    
    <!-- Accent Colors - Blue Professional Theme -->
    <SolidColorBrush x:Key="AccentRedBrush" Color="#3b82f6"/>            <!-- Professional blue -->
    <SolidColorBrush x:Key="AccentRedHoverBrush" Color="#2563eb"/>       <!-- Hover blue -->
    <SolidColorBrush x:Key="AccentRedPressedBrush" Color="#1d4ed8"/>     <!-- Pressed blue -->
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#d1d5db"/>               <!-- Light gray borders -->
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#9ca3af"/>          <!-- Hover borders -->
    
    <!-- Text Colors - Dark on Light -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>          <!-- Near-black primary text -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#374151"/>        <!-- Dark gray secondary -->
    <SolidColorBrush x:Key="TextMutedBrush" Color="#6b7280"/>            <!-- Medium gray -->
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#9ca3af"/>         <!-- Light gray disabled -->
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#059669"/>              <!-- Green success -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#dc2626"/>                <!-- Red error -->
    <SolidColorBrush x:Key="WarningBrush" Color="#d97706"/>              <!-- Orange warning -->

</ResourceDictionary>