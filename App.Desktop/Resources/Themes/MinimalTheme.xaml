<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- MINIMAL THEME: Brutalist simplicity - maximum contrast, minimal colors -->
    
    <!-- Primary Background Colors - Pure Monochrome -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#ffffff"/>          <!-- Pure white base -->
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#f5f5f5"/>        <!-- Very light gray -->
    <SolidColorBrush x:Key="TertiaryDarkBrush" Color="#eeeeee"/>         <!-- Light gray inputs -->
    
    <!-- Accent Colors - Pure Black Accents -->
    <SolidColorBrush x:Key="AccentRedBrush" Color="#000000"/>            <!-- Pure black accent -->
    <SolidColorBrush x:Key="AccentRedHoverBrush" Color="#333333"/>       <!-- Dark gray hover -->
    <SolidColorBrush x:Key="AccentRedPressedBrush" Color="#666666"/>     <!-- Medium gray pressed -->
    
    <!-- Border Colors - Subtle Grays -->
    <SolidColorBrush x:Key="BorderBrush" Color="#cccccc"/>               <!-- Light gray borders -->
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#999999"/>          <!-- Medium gray hover -->
    
    <!-- Text Colors - Pure Black/Gray on White -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#000000"/>          <!-- Pure black text -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#333333"/>        <!-- Dark gray secondary -->
    <SolidColorBrush x:Key="TextMutedBrush" Color="#666666"/>            <!-- Medium gray muted -->
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#999999"/>         <!-- Light gray disabled -->
    
    <!-- Status Colors - Minimal Color Palette -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#006600"/>              <!-- Dark green success -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#cc0000"/>                <!-- Dark red error -->
    <SolidColorBrush x:Key="WarningBrush" Color="#cc6600"/>              <!-- Dark orange warning -->

</ResourceDictionary>