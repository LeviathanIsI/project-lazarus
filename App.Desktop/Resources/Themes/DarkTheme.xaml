<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DARK GOTHIC THEME: Sophisticated darkness with auburn accents -->
    
    <!-- Primary Background Colors -->
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#0f0f0f"/>          <!-- Deep black base -->
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="#1a1a1a"/>        <!-- Dark gray panels -->
    <SolidColorBrush x:Key="TertiaryDarkBrush" Color="#1e1e1e"/>         <!-- Input/control backgrounds -->
    
    <!-- Accent Colors - Auburn/Red Theme -->
    <SolidColorBrush x:Key="AccentRedBrush" Color="#c44536"/>            <!-- Primary auburn -->
    <SolidColorBrush x:Key="AccentRedHoverBrush" Color="#a63429"/>       <!-- Hover auburn -->
    <SolidColorBrush x:Key="AccentRedPressedBrush" Color="#8b2a1f"/>     <!-- Pressed auburn -->
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#374151"/>               <!-- Subtle borders -->
    <SolidColorBrush x:Key="BorderHoverBrush" Color="#4b5563"/>          <!-- Hover borders -->
    
    <!-- Text Colors - Light on Dark -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#f7fafc"/>          <!-- Pure white primary text -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#e2e8f0"/>        <!-- Light gray secondary -->
    <SolidColorBrush x:Key="TextMutedBrush" Color="#94a3b8"/>            <!-- Muted gray -->
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#64748b"/>         <!-- Disabled gray -->
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#10b981"/>              <!-- Emerald success -->
    <SolidColorBrush x:Key="ErrorBrush" Color="#ef4444"/>                <!-- Red error -->
    <SolidColorBrush x:Key="WarningBrush" Color="#f59e0b"/>              <!-- Amber warning -->

</ResourceDictionary>