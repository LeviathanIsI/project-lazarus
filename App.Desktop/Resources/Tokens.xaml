<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- === DESIGN TOKEN SYSTEM ===
         Centralized design constants that remain consistent across all themes
         These are the architectural constants that themes inherit -->

    <!-- Typography Scale -->
    <system:Double x:Key="FontSizeXSmall">10</system:Double>
    <system:Double x:Key="FontSizeSmall">12</system:Double>
    <system:Double x:Key="FontSizeBase">14</system:Double>
    <system:Double x:Key="FontSizeMedium">16</system:Double>
    <system:Double x:Key="FontSizeLarge">18</system:Double>
    <system:Double x:Key="FontSizeXLarge">24</system:Double>
    <system:Double x:Key="FontSizeXXLarge">32</system:Double>
    <system:Double x:Key="FontSizeDisplay">48</system:Double>

    <!-- Spacing Scale (consistent 8px grid) -->
    <Thickness x:Key="SpacingXSmall">2</Thickness>
    <Thickness x:Key="SpacingSmall">4</Thickness>
    <Thickness x:Key="SpacingBase">8</Thickness>
    <Thickness x:Key="SpacingMedium">12</Thickness>
    <Thickness x:Key="SpacingLarge">16</Thickness>
    <Thickness x:Key="SpacingXLarge">24</Thickness>
    <Thickness x:Key="SpacingXXLarge">32</Thickness>
    <Thickness x:Key="SpacingXXXLarge">48</Thickness>

    <!-- Border Radius Scale -->
    <CornerRadius x:Key="RadiusNone">0</CornerRadius>
    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusBase">6</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusRound">9999</CornerRadius>

    <!-- Shadow/Elevation System -->
    <DropShadowEffect x:Key="ShadowSmall" 
                      Color="#40000000" 
                      Direction="270" 
                      ShadowDepth="1" 
                      BlurRadius="3"/>
    <DropShadowEffect x:Key="ShadowMedium" 
                      Color="#50000000" 
                      Direction="270" 
                      ShadowDepth="2" 
                      BlurRadius="6"/>
    <DropShadowEffect x:Key="ShadowLarge" 
                      Color="#60000000" 
                      Direction="270" 
                      ShadowDepth="4" 
                      BlurRadius="12"/>

    <!-- Animation Durations -->
    <Duration x:Key="AnimationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationBase">0:0:0.25</Duration>
    <Duration x:Key="AnimationSlow">0:0:0.4</Duration>

    <!-- Z-Index Layers -->
    <system:Int32 x:Key="ZIndexBase">0</system:Int32>
    <system:Int32 x:Key="ZIndexOverlay">10</system:Int32>
    <system:Int32 x:Key="ZIndexModal">20</system:Int32>
    <system:Int32 x:Key="ZIndexTooltip">30</system:Int32>
    <system:Int32 x:Key="ZIndexToast">40</system:Int32>

    <!-- Layout Grid -->
    <GridLength x:Key="GridAuto">Auto</GridLength>
    <GridLength x:Key="GridStar">*</GridLength>
    <GridLength x:Key="GridFixed200">200</GridLength>
    <GridLength x:Key="GridFixed300">300</GridLength>
    <GridLength x:Key="GridFixed400">400</GridLength>

    <!-- Icon Sizes -->
    <system:Double x:Key="IconSizeSmall">12</system:Double>
    <system:Double x:Key="IconSizeBase">16</system:Double>
    <system:Double x:Key="IconSizeMedium">20</system:Double>
    <system:Double x:Key="IconSizeLarge">24</system:Double>
    <system:Double x:Key="IconSizeXLarge">32</system:Double>

    <!-- Button Sizes -->
    <system:Double x:Key="ButtonHeightSmall">28</system:Double>
    <system:Double x:Key="ButtonHeightBase">32</system:Double>
    <system:Double x:Key="ButtonHeightMedium">36</system:Double>
    <system:Double x:Key="ButtonHeightLarge">40</system:Double>

    <!-- Input Sizes -->
    <system:Double x:Key="InputHeightSmall">28</system:Double>
    <system:Double x:Key="InputHeightBase">32</system:Double>
    <system:Double x:Key="InputHeightLarge">40</system:Double>

    <!-- Container Widths -->
    <system:Double x:Key="ContainerSmall">480</system:Double>
    <system:Double x:Key="ContainerBase">640</system:Double>
    <system:Double x:Key="ContainerLarge">768</system:Double>
    <system:Double x:Key="ContainerXLarge">1024</system:Double>
    <system:Double x:Key="ContainerXXLarge">1280</system:Double>

    <!-- Opacity Levels -->
    <system:Double x:Key="OpacityDisabled">0.38</system:Double>
    <system:Double x:Key="OpacityMuted">0.6</system:Double>
    <system:Double x:Key="OpacitySecondary">0.7</system:Double>
    <system:Double x:Key="OpacityPrimary">0.87</system:Double>
    <system:Double x:Key="OpacityFull">1.0</system:Double>

    <!-- Transition Easing -->
    <KeySpline x:Key="EaseInOut">0.4,0,0.2,1</KeySpline>
    <KeySpline x:Key="EaseOut">0,0,0.2,1</KeySpline>
    <KeySpline x:Key="EaseIn">0.4,0,1,1</KeySpline>

    <!-- === SEMANTIC TOKEN MAPPINGS ===
         These provide meaning to the raw values above -->

    <!-- Component Specific Tokens -->
    <StaticResource x:Key="CardPadding" ResourceKey="SpacingLarge"/>
    <StaticResource x:Key="CardRadius" ResourceKey="RadiusMedium"/>
    <StaticResource x:Key="ButtonPadding" ResourceKey="SpacingMedium"/>
    <StaticResource x:Key="ButtonRadius" ResourceKey="RadiusBase"/>
    <StaticResource x:Key="InputPadding" ResourceKey="SpacingBase"/>
    <StaticResource x:Key="InputRadius" ResourceKey="RadiusBase"/>

    <!-- Navigation Tokens -->
    <system:Double x:Key="NavTabHeight">40</system:Double>
    <system:Double x:Key="NavTabMinWidth">100</system:Double>
    <StaticResource x:Key="NavTabPadding" ResourceKey="SpacingMedium"/>

    <!-- Header Tokens -->
    <StaticResource x:Key="HeaderFontSize" ResourceKey="FontSizeXLarge"/>
    <StaticResource x:Key="SubHeaderFontSize" ResourceKey="FontSizeLarge"/>
    <StaticResource x:Key="BodyFontSize" ResourceKey="FontSizeBase"/>
    <StaticResource x:Key="CaptionFontSize" ResourceKey="FontSizeSmall"/>

    <!-- Progress Indicators -->
    <system:Double x:Key="ProgressBarHeight">4</system:Double>
    <system:Double x:Key="ProgressBarHeightLarge">8</system:Double>
    <StaticResource x:Key="ProgressBarRadius" ResourceKey="RadiusSmall"/>

    <!-- Status Indicators -->
    <system:Double x:Key="StatusDotSize">12</system:Double>
    <system:Double x:Key="StatusDotSizeLarge">16</system:Double>
    <StaticResource x:Key="StatusDotRadius" ResourceKey="RadiusRound"/>

    <!-- Modal/Dialog Tokens -->
    <system:Double x:Key="ModalMinWidth">400</system:Double>
    <system:Double x:Key="ModalMaxWidth">800</system:Double>
    <StaticResource x:Key="ModalPadding" ResourceKey="SpacingXLarge"/>
    <StaticResource x:Key="ModalRadius" ResourceKey="RadiusLarge"/>

    <!-- Sidebar Tokens -->
    <system:Double x:Key="SidebarWidth">300</system:Double>
    <system:Double x:Key="SidebarMinWidth">200</system:Double>
    <system:Double x:Key="SidebarMaxWidth">400</system:Double>

    <!-- === THEME-AGNOSTIC UTILITIES ===
         These remain constant regardless of theme -->

    <!-- Layout Helpers -->
    <Thickness x:Key="ZeroPadding">0</Thickness>
    <Thickness x:Key="ZeroMargin">0</Thickness>
    <GridLength x:Key="ZeroGrid">0</GridLength>
    
    <!-- Brush Utilities -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
    <SolidColorBrush x:Key="BlackBrush" Color="Black"/>

    <!-- Text Utilities -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

    <!-- Alignment Utilities -->
    <HorizontalAlignment x:Key="AlignLeft">Left</HorizontalAlignment>
    <HorizontalAlignment x:Key="AlignCenter">Center</HorizontalAlignment>
    <HorizontalAlignment x:Key="AlignRight">Right</HorizontalAlignment>
    <HorizontalAlignment x:Key="AlignStretch">Stretch</HorizontalAlignment>
    <VerticalAlignment x:Key="AlignTop">Top</VerticalAlignment>
    <VerticalAlignment x:Key="AlignMiddle">Center</VerticalAlignment>
    <VerticalAlignment x:Key="AlignBottom">Bottom</VerticalAlignment>
    <VerticalAlignment x:Key="AlignStretchVertical">Stretch</VerticalAlignment>

</ResourceDictionary>