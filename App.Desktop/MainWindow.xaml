<Window x:Class="Lazarus.Desktop.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:views="clr-namespace:Lazarus.Desktop.Views"
		xmlns:threeDViews="clr-namespace:Lazarus.Desktop.Views.ThreeDModels"
		xmlns:imagesViews="clr-namespace:Lazarus.Desktop.Views.Images"
		xmlns:videoViews="clr-namespace:Lazarus.Desktop.Views.Video"
		xmlns:voiceViews="clr-namespace:Lazarus.Desktop.Views.Voice"
		xmlns:entitiesViews="clr-namespace:Lazarus.Desktop.Views.Entities"
		Title="Project Lazarus"
		Height="700"
		Width="1200"
		Background="{DynamicResource PrimaryDarkBrush}">
	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<TextBlock Text="Project Lazarus"
				   Grid.Row="0"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Center"
				   FontSize="28"
				   Foreground="{DynamicResource AccentRedBrush}"
				   FontWeight="Bold"
				   Margin="0,0,0,16"/>

		<!-- API Status & Global Preferences -->
		<StackPanel Orientation="Horizontal"
					Grid.Row="1"
					Margin="0,0,0,12">
			<TextBlock x:Name="ApiStatus"
					   Text="API: unknown"
					   VerticalAlignment="Center"
					   Foreground="{DynamicResource TextSecondaryBrush}"
					   Margin="0,0,12,0"/>
			<Button Content="Ping API"
					Click="PingApi_Click"
					Margin="0,0,8,0"
					Padding="8,4"
					Background="{DynamicResource BorderBrush}"
					Foreground="{DynamicResource TextPrimaryBrush}"
					BorderThickness="0"/>
			
			<!-- Global Customization Controls -->
			<Separator Margin="12,0" Background="{DynamicResource BorderBrush}" Width="1"/>
			
			<TextBlock Text="View:"
					   Style="{StaticResource CaptionTextStyle}"
					   VerticalAlignment="Center"
					   Margin="0,0,4,0"/>
			<ComboBox x:Name="ViewModeSelector"
					  ItemsSource="{Binding ViewModes}"
					  SelectedItem="{Binding CurrentViewMode}"
					  Style="{StaticResource DarkComboBoxStyle}"
					  MinWidth="120"
					  Margin="0,0,12,0"
					  ToolTip="Change UI complexity: Novice (simple) → Enthusiast (balanced) → Developer (full chaos)"/>
			
			<TextBlock Text="Theme:"
					   Style="{StaticResource CaptionTextStyle}"
					   VerticalAlignment="Center" 
					   Margin="0,0,4,0"/>
			<ComboBox x:Name="ThemeSelector"
					  ItemsSource="{Binding Themes}"
					  SelectedItem="{Binding CurrentTheme}"
					  Style="{StaticResource DarkComboBoxStyle}"
					  MinWidth="120"
					  ToolTip="Switch visual theme: Dark Gothic → Light Clean → Cyberpunk Neon → Minimal"/>
		</StackPanel>

		<!-- Tab Navigation -->
		<Border Grid.Row="2"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="8,8,0,0"
				Margin="0,0,0,0">
			<StackPanel Orientation="Horizontal"
						Background="{DynamicResource TertiaryDarkBrush}"
						Margin="8">
				<Button x:Name="ConversationsTabButton"
						Content="Conversations"
						Click="ConversationsTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="ModelsTabButton"
						Content="Model Configuration"
						Click="ModelsTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="ImagesTabButton"
						Content="Images"
						Click="ImagesTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="VideoTabButton"
						Content="Video"
						Click="VideoTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="ModelsThreeDTabButton"
						Content="3D Models"
						Click="ModelsThreeDTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="VoiceTabButton"
						Content="Voice"
						Click="VoiceTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
				<Button x:Name="EntitiesTabButton"
						Content="Entities"
						Click="EntitiesTab_Click"
						Style="{StaticResource MainNavButtonStyle}" />
			</StackPanel>
		</Border>

		<!-- Tab Content -->
		<Border Grid.Row="3"
				Background="{DynamicResource SecondaryDarkBrush}"
				CornerRadius="0,0,8,8"
				Padding="0">
			<Grid>
				<!-- Conversations Tab -->
				<views:ChatView x:Name="ConversationsView"
								Visibility="Visible"/>

				<!-- Model Configuration Tab -->
				<views:ModelsView x:Name="ModelsView"
								  Visibility="Collapsed"/>

				<!-- Images Tab -->
				<imagesViews:ImagesView x:Name="ImagesView"
										Visibility="Collapsed"/>

				<!-- Video Tab -->
				<videoViews:VideoView x:Name="VideoView"
									  Visibility="Collapsed"/>

				<!-- 3D Models Tab -->
				<threeDViews:ThreeDModelsView x:Name="ModelsThreeDView"
											  Visibility="Collapsed"/>

				<!-- Voice Tab -->
				<voiceViews:VoiceView x:Name="VoiceView"
									  Visibility="Collapsed"/>

				<!-- Entities Tab -->
				<entitiesViews:EntitiesView x:Name="EntitiesView"
											Visibility="Collapsed"/>
			</Grid>
		</Border>
	</Grid>
</Window>