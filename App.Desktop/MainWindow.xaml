<Window x:Class="Lazarus.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Lazarus.Desktop.Views"
        Title="Project Lazarus" Height="700" Width="1200"
        Background="#0f0f0f">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Project Lazarus"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="28"
                   Foreground="#8b5cf6"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
            <TextBlock x:Name="ApiStatus"
                       Text="API: unknown"
                       VerticalAlignment="Center"
                       Foreground="#d1d5db"
                       Margin="0,0,12,0"/>
            <Button Content="Ping API" Click="PingApi_Click" 
                    Margin="0,0,8,0" Padding="8,4"
                    Background="#374151" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Tab Navigation -->
        <Border Grid.Row="2" Background="#1a1a1a" CornerRadius="8,8,0,0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" Margin="12,8">
                <Button x:Name="ChatTabButton" Content="Conversations" 
                        Click="ChatTab_Click" 
                        Margin="0,0,8,0" Padding="16,8"
                        Background="#8b5cf6" Foreground="White" BorderThickness="0"
                        FontWeight="SemiBold"/>
                <Button x:Name="ModelsTabButton" Content="Model Configuration" 
                        Click="ModelsTab_Click" 
                        Margin="0,0,8,0" Padding="16,8"
                        Background="#374151" Foreground="#9ca3af" BorderThickness="0"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Tab Content -->
        <Border Grid.Row="3" Background="#1a1a1a" CornerRadius="0,0,8,8" Padding="0">
            <Grid>
                <views:ChatView x:Name="ChatView" Visibility="Visible"/>
                <views:ModelsView x:Name="ModelsView" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>